<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:theme="@style/Theme.MyTheme"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
         <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:id="@+id/textTitle"
            android:text="@string/addcategory_activity_title"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:background="@android:color/transparent"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:background="@color/colorbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:text="@string/addcategory_activity_name"
                android:background="@android:color/transparent"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texthintcolor"
                android:hint="@string/addcategory_activity_name"
                android:textColor="@color/primaryDark"
                android:id="@+id/txtNameCategory"
                android:minHeight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="70dp">
         <FrameLayout
            android:background="@drawable/btngray"
            android:id="@+id/btnDelete"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="@string/abc_menu_delete_shortcut_label"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </FrameLayout>
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:id="@+id/btnAdd"
            android:textColor="@color/editbluecolor"
            android:text="@string/addcategory_activity_title"
            android:background="@drawable/btnborderblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
