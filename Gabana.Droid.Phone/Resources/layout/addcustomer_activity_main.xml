<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
         <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnback"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:id="@+id/txtTitle"
            android:text="@string/addcustomer_activity_addcustomer"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:background="@android:color/transparent"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <requestFocus />
   <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                    <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="120dp">
                        <android.support.v7.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            app:cardCornerRadius="60dp"
                            android:layout_height="match_parent">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:visibility="visible"
                                    android:id="@+id/imgProfile"
                                    android:background="@color/colorbackground"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"/>
                                <TextView
                                    android:textColor="@color/editbluecolor"
                                    android:id="@+id/txtNameView"
                                    android:textSize="15dp"
                                    android:maxLength="7"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </FrameLayout>

                        </android.support.v7.widget.CardView>

                    </FrameLayout>
                    <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <FrameLayout
                            android:layout_gravity="bottom"
                            android:layout_width="120dp"
                            android:layout_height="36dp">
                            <ImageButton
                                android:id="@+id/btnAddImage"
                                android:layout_gravity="right"
                                android:background="@mipmap/addimg"
                                android:layout_width="36dp"
                                android:layout_height="36dp"/>
                        </FrameLayout>
                    </FrameLayout>
                </FrameLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:text="@string/customer_activity_customername"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:maxLines="1"
                        android:inputType="text"
                        android:maxLength="50"
                        android:id="@+id/txtCustomerName"
                        android:hint="@string/customer_activity_customername"
                        android:textSize="15dp"                        
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:minHeight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:text="@string/addcustomer_activity_phonenumber"
                        android:textColor="#404040"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>
                    <EditText
                        android:inputType="phone"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:hint="021-234-5678"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="15dp"
                        android:id="@+id/txtphonenumber"
                        android:background="@android:color/transparent"
                        android:minHeight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="@string/addcustomer_activity_customertype"
                            android:textSize="15dp"
                            android:textColor="@color/textblackcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtNoCustomerType"
                            android:maxLines="1"
                            android:text="@string/addcustomer_activity_nocustomertype"
                            android:gravity="center_vertical"
                            android:textSize="15dp"
                            android:textColor="@color/textblacklightcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:visibility="visible"
                            android:minHeight="0dp"
                            style="@style/Divider"
                            android:id= "@+id/spinnerCustomerType"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnCustomertype"
                            android:contentDescription="@string/membertype"
                            android:background="@mipmap/Next"
                            android:scaleType="fitXY"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/lnSelectType"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/colorbackground"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/lnShowDetail">
                    <TextView
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:textColor="#F75600"
                        android:textSize="15dp"
                        android:text="@string/additem_activity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_gravity="center"
                            android:id="@+id/btnShowDetail"
                            android:background="@mipmap/detailnotshow"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:id="@+id/lnDetails"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/addcustomer_activity_customerID"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"/>
                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:hint="@string/addcustomer_activity_customerID"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="15dp"
                            android:id="@+id/txtcustomerid"
                            android:background="@android:color/transparent"
                            android:minHeight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/addcustomer_activity_shortname"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"/>
                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:hint="@string/addcustomer_activity_shortname"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="15dp"
                            android:id="@+id/txtShortName"
                            android:background="@android:color/transparent"
                            android:minHeight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/addcustomer_activity_nationalid"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"/>
                        <EditText
                            android:inputType="number"
                            android:maxLength="17"
                            android:hint="x xxxx xxxxx xx x"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="15dp"
                            android:id="@+id/txtnationalID"
                            android:background="@android:color/transparent"
                            android:minHeight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center_vertical"
                                android:text="@string/addcustomer_activity_birthdate"
                                android:textSize="15dp"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txtbirthdate"
                                android:gravity="center_vertical"
                                android:textSize="15dp"
                                android:textColor="@color/editbluecolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/imgbirthdate"
                                android:background="@mipmap/Next"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:paddingLeft="15dp"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center_vertical"
                                android:text="@string/customer_activity_gender"
                                android:textSize="15dp"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <Spinner
                                style="@style/Divider"
                                android:minHeight="20dp"
                                android:id="@+id/spinnergender"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnGender"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_gravity="center"
                                android:id="@+id/imggender"
                                android:scaleType="fitXY"
                                android:background="@mipmap/Next"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/addcustomer_activity_email"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"/>
                        <EditText
                            android:inputType="textEmailAddress"
                            android:hint="@string/addcustomer_activity_email"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="15dp"
                            android:id="@+id/txtemail"
                            android:background="@android:color/transparent"
                            android:minHeight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/addcustomer_activity_line"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"/>
                        <EditText
                            android:minHeight="20dp"
                            android:inputType="text"
                            android:hint="@string/addcustomer_activity_line"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="15dp"
                            android:id="@+id/txtLine"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/addcustomer_activity_address"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"/>
                        <EditText
                            android:inputType="text"
                            android:hint="@string/addcustomer_activity_address"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="15dp"
                            android:id="@+id/txtaddress"
                            android:minHeight="20dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="@string/addcustomer_activity_province"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"/>
                            <Spinner
                                style="@style/Divider"
                                android:minHeight="20dp"
                                android:id="@+id/spinnerProvince"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnprovinces"
                                android:background="@mipmap/next"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="@string/addcustomer_activity_district"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"/>
                            <Spinner
                                style="@style/Divider"
                                android:minHeight="20dp"
                                android:id="@+id/spinneramphures"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnAmphure"
                                android:background="@mipmap/next"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="@string/addcustomer_activity_subdistrict"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"/>
                            <Spinner
                                style="@style/Divider"
                                android:minHeight="20dp"
                                android:id="@+id/spinnerDistrict"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnDistrict"
                                android:background="@mipmap/next"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="@string/addcustomer_activity_postalcode"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"/>
                            <TextView
                                android:id="@+id/txtzipcode"
                                android:hint="@string/addcustomer_activity_selectzipcode"
                                android:text="@string/addcustomer_activity_selectzipcode"
                                android:textColor="@color/textblacklightcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/addcustomer_activity_comment"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"/>
                        <EditText
                            android:inputType="text"
                            android:hint="@string/addcustomer_activity_comment"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="15dp"
                            android:id="@+id/txtcomment"
                            android:background="@android:color/transparent"
                            android:minHeight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <TextView
                                android:text="@string/addcustomer_activity_linkpromaxx"
                                android:textColor="#404040"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"/>
                            <EditText
                                android:enabled="false"
                                android:inputType="text"
                                android:hint="@string/addcustomer_activity_linkpromaxx"
                                android:textColor="@color/primaryDark"
                                android:textColorHint="@color/texthintcolor"
                                android:textSize="15dp"
                                android:id="@+id/txtlinkpromaxx"
                                android:background="@android:color/transparent"
                                android:minHeight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <FrameLayout
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <FrameLayout
            android:id="@+id/lnShowDelete"
            android:background="@drawable/btngray"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgDelete"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <FrameLayout
                android:id="@+id/lnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <Button
            android:id="@+id/btnAdd"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:background="@drawable/btnborderblue"
            android:textColor="@color/editbluecolor"
            android:text="@string/addcustomer_activity_addcustomer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
