<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginBottom="11dp"
            android:paddingTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="@string/textaddimage"
                android:textColor="@color/textblackcolor"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"            
             />
            <TextView
                android:layout_marginRight="20dp"
                android:textColor="@color/textblacklightcolor"
                android:text="@string/textcancle"
                android:layout_gravity="right"
                android:id="@+id/txtcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"            
             />
        </FrameLayout>  
            <View
        android:background="@color/colorbackground"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/lnTakePicture"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="65dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/camera"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/textblackcolor"
                android:text="@string/texttakeapicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTakePicture" />
        </LinearLayout>
         <View
        android:background="@color/colorbackground"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/lnChoosPicture"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="65dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="65dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/AddImgItem"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
            <TextView
                android:text="@string/textchooseyourpicture"
                android:layout_width="match_parent"
                android:textColor="@color/textblackcolor"
                android:layout_height="wrap_content"
                android:id="@+id/txtChoosPicture" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>