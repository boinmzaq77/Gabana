<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
         <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textTitle"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textblackcolor"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:text="@string/employee_activity_add"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_weight="0.8"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="@string/employee_activity_username"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtEmployeeUserName"
                        android:text="@string/employee_activity_username"
                        android:textSize="15dp"
                        android:textColor="@color/textblacklightcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="@string/employee_fullname"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:maxLines="1"
                        android:maxLength="50"
                        android:id="@+id/txtEmployeeName"
                        android:hint="@string/employee_fullname"
                        android:textSize="15dp"
                        android:inputType="text"
                        android:minHeight="20dp"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:id="@+id/lnPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:text="@string/employee_password"
                            android:textSize="15dp"
                            android:textColor="@color/textblackcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:minHeight="20dp"
                            android:maxLines="1"
                            android:maxLength="20"
                            android:id="@+id/txtEmployeePassword"
                            android:hint="@string/employee_unshowpassword"
                            android:textSize="15dp"
                            android:inputType="textPassword"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btnChangePass"
                            android:textAllCaps="false"
                            android:text="@string/employee_changepass"
                            android:textColor="@color/editbluecolor"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/btngrayoval"
                            android:layout_width="85dp"
                            android:layout_height="35dp"/>
                    </FrameLayout>

                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/lnChangPass"
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            app:cardElevation ="1dp"
                            app:cardCornerRadius ="10dp"
                            app:cardUseCompatPadding ="false">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_margin="6dp"
                                    android:background="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:paddingLeft="15dp"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical"
                                        android:background="@android:color/transparent"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp">
                                        <TextView
                                            android:textSize="15dp"
                                            android:textColor="@color/textblackcolor"
                                            android:text="@string/changepass_activity_new"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <EditText
                                            android:minHeight="20dp"
                                            android:id="@+id/textNewPass"
                                            android:hint="@string/employee_unshowpassword"
                                            android:textColor="@color/editbluecolor"
                                            android:background="@android:color/transparent"
                                            android:textColorHint="@color/texthintcolor"
                                            android:textSize="15dp"
                                            android:inputType="textPassword"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:paddingLeft="15dp"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical"
                                        android:background="@android:color/transparent"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp">
                                        <TextView
                                            android:textSize="15dp"
                                            android:textColor="@color/textblackcolor"
                                            android:text="@string/employee_confrim_password"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <EditText
                                            android:id="@+id/txtConfirm"
                                            android:hint="@string/employee_unshowpassword"
                                            android:textColor="@color/editbluecolor"
                                            android:background="@android:color/transparent"
                                            android:textColorHint="@color/texthintcolor"
                                            android:textSize="15dp"
                                            android:minHeight="20dp"
                                            android:inputType="textPassword"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>
                        </android.support.v7.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btnDeleteChangePass"
                            android:background="@mipmap/DeleteSize"
                            android:scaleType="fitXY"
                            android:layout_gravity="right"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </FrameLayout>
                </RelativeLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:id="@+id/lnConfirmPass"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="@string/employee_confrim_password"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:maxLines="1"
                        android:maxLength="50"
                        android:id="@+id/txtEmployeeConfirmPassword"
                        android:hint="@string/employee_unshowpassword"
                        android:textSize="15dp"
                        android:inputType="textPassword"
                        android:textColor="@color/primaryDark"
                        android:minHeight="20dp"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:id="@+id/frameEmprole"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/employee_employee_roles"
                            android:textSize="15dp"
                            android:textColor="@color/textblackcolor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                       <TextView
                            android:layout_weight="1"
                            android:id="@+id/textEmpRole"
                            android:gravity="center_vertical"
                            android:text="@string/employee_employee_roles"
                            android:textSize="15dp"
                            android:textColor="@color/textblacklightcolor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_gravity="center"
                            android:id="@+id/imgRoles"
                            android:scaleType="fitXY"
                            android:background="@mipmap/Next"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/lnRoles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:id="@+id/frameBranch"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/employee_employee_branch"
                            android:textSize="15dp"
                            android:textColor="@color/textblackcolor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                         <TextView
                            android:layout_weight="1"
                            android:id="@+id/textBranch"
                            android:gravity="center_vertical"
                            android:text="@string/employee_employee_branch"
                            android:textSize="15dp"
                            android:textColor="@color/textblacklightcolor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:background="@mipmap/Next"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lnBranch"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="@string/employee_employee_comment"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:maxLines="1"
                        android:maxLength="50"
                        android:id="@+id/txtComment"
                        android:hint="@string/employee_employee_comment"
                        android:textSize="15dp"
                        android:inputType="text"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:minHeight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lnPinCode"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/textblackcolor"
                        android:textSize="15dp"
                        android:text="@string/employee_pincode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="25dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <Switch
                        android:visibility="visible"
                        android:id="@+id/switchShow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleX="1"
                        android:scaleY="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <FrameLayout
            android:id="@+id/lnShowDelete"
            android:background="@drawable/btngray"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <FrameLayout
                android:id="@+id/lnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:id="@+id/btnAddEmployee"
            android:textSize="16dp"
            android:textColor="@color/textIcon"
            android:text="@string/employee_activity_add"
            android:background="@drawable/btnblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
