<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white">
    <FrameLayout
        android:layout_alignParentTop ="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imgBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtTitle"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extra_activity_title"
            android:textSize="15dp"/>
        <FrameLayout
            android:id="@+id/lnBack"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
   <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerHeaderItem"
            android:layout_gravity="center_horizontal"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--tab_Product-->
        <LinearLayout
            android:id="@+id/lnShowProduct"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/scrollView1">
                <LinearLayout
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical"
                            android:layout_width= "125dp"
                            android:layout_height="match_parent"
                            android:id="@+id/lnCenter">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/white"
                                card_view:cardElevation="1dp"
                                card_view:cardCornerRadius="10dp"
                                card_view:cardUseCompatPadding="false">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/lnDetailItem">
                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/colorViewItem" />
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="bottom"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <FrameLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageView
                                                android:scaleType="fitXY"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/imageViewItem" />
                                            <TextView
                                                android:textSize="20dp"
                                                android:maxLines="1"
                                                android:maxLength="7"
                                                android:gravity="center"
                                                android:layout_gravity="center"
                                                android:textAlignment="center"
                                                android:text="Item"
                                                android:id="@+id/txtViewItemnameTitle"
                                                android:textColor="@android:color/white"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"/>
                                        </FrameLayout>
                                        <LinearLayout
                                            android:layout_weight="1.8"
                                            android:paddingLeft="8dp"
                                            android:orientation="vertical"
                                            android:gravity="center_vertical"
                                            android:background="#33000000"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <TextView
                                                android:maxLines="1"
                                                android:text="@string/additem_activity_itemname"
                                                android:textColor="@android:color/white"
                                                android:id="@+id/txtItemNamePic"
                                                android:textSize="13dp"
                                                android:background="@android:color/transparent"
                                                android:layout_gravity="center_vertical"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                            <TextView
                                                android:maxLines="1"
                                                android:textColor="@android:color/white"
                                                android:textSize="13dp"
                                                android:id="@+id/txtPricePic"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </FrameLayout>

                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="3"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:weightSum="5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:scaleType="fitXY"
                                        android:id="@+id/btncolor1"
                                        android:background="@mipmap/color1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor2"
                                        android:scaleType="fitXY"
                                        android:background="@mipmap/color2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor3"
                                        android:scaleType="fitXY"
                                        android:background="@mipmap/color3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor4"
                                        android:background="@mipmap/color4"
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor5"
                                        android:background="@mipmap/color5"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:weightSum="5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor6"
                                        android:scaleType="fitXY"
                                        android:background="@mipmap/color6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor7"
                                        android:scaleType="fitXY"
                                        android:background="@mipmap/color7"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor8"
                                        android:background="@mipmap/color8"
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btncolor9"
                                        android:background="@mipmap/color9"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">
                                    <ImageButton
                                        android:id="@+id/btnaddpic"
                                        android:layout_margin="3dp"
                                        android:background="@mipmap/album"
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                            </LinearLayout>
                            <FrameLayout
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/imgFavorite"
                                    android:layout_gravity="center_vertical"
                                    android:background="@mipmap/unfav"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"/>
                                <TextView
                                    android:layout_marginLeft="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/textblackcolor"
                                    android:text="@string/textfavorite"
                                    android:textSize="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <FrameLayout
                                    android:id="@+id/btnFavorite"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"/>
                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/extra_activity_itemname"
                            android:textSize="15dp"
                            android:textColor="#404040"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textProductName" />
                        <EditText
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:textColorHint="#8AD3F5"
                            android:gravity="center_vertical"
                            android:textColor="@color/editbluecolor"
                            android:maxLines="1"
                            android:maxLength="255"
                            android:inputType="text"
                            android:hint="@string/extra_activity_itemname"
                            android:textSize="15dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/textInsertProduct" />
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="@string/additem_activity_price"
                            android:textColor="#404040"
                            android:textSize="15dp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textProductPrice" />
                        <EditText
                            android:minHeight="20dp"
                            android:textSize="15dp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#8AD3F5"
                            android:textColor="@color/editbluecolor"
                            android:inputType="numberDecimal"
                            android:background="@android:color/transparent"
                            android:id="@+id/textInsertPrice" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/colorbackground"/>
                    <RelativeLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:gravity="center_vertical"
                            android:textColor="#F75600"
                            android:textSize="15dp"
                            android:text="@string/additem_activity_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_gravity="center_vertical"
                                android:id="@+id/btnShowDetail"
                                android:background="@mipmap/detailnotshow"
                                android:layout_width="28dp"
                                android:layout_height="28dp" />
                        </LinearLayout>
                        <FrameLayout
                            android:id="@+id/lnBtnShowDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:id="@+id/lnDetails"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <TextView
                                android:text="@string/additem_activity_cost"
                                android:textSize="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/txtcost"
                                android:minHeight="20dp"
                                android:textSize="15dp"
                                android:inputType="numberDecimal"
                                android:hint="0.00"
                                android:textColorHint="@color/texthintcolor"
                                android:textColor="@color/editbluecolor"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:background="@color/colorbackground"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                        <FrameLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <LinearLayout
                                android:layout_marginRight="60dp"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="@string/additem_activity_category"
                                    android:textColor="@color/textblackcolor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"/>
                                <Spinner
                                    style="@style/Divider"
                                    android:id="@+id/spinnerCategory"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:minHeight="20dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:id="@+id/btnCategory"
                                    android:background="@mipmap/next"
                                    android:scaleType="fitXY"
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lnCategory"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <!--tab_Stock-->
        <LinearLayout
            tools:visibility="gone"
            android:id="@+id/lnShowStock"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout10">
                <TextView
                    android:textColor="@color/textblackcolor"
                    android:layout_gravity="center_vertical"
                    android:text="@string/additem_activity_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp" />
                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:id="@+id/switchStock" />
                </LinearLayout>
            </FrameLayout>
                <LinearLayout
                    android:id="@+id/lnSwithStcok"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:id="@+id/lnOnhand"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="120dp">
                        <TextView
                            android:text="@string/onhand_activity_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtStock"
                            android:textColorHighlight="@color/texthintcolor"
                            android:hint="0"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:textColorHint="@color/texthintcolor"
                            android:textColor="@color/editbluecolor"
                            android:textSize="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="#F8F8F8"
                        android:layout_height="5dp"/>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="15dp"
                            android:text="@string/additem_activity_minimunstock"
                            android:textColor="@color/textblackcolor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/txtMinimumStock"
                            android:inputType="number"
                            android:textColorHint="@color/texthintcolor"
                            android:textColor="@color/editbluecolor"
                            android:background="@android:color/transparent"
                            android:hint="0"
                            android:textSize="15dp"
                            android:minHeight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/additem_activity_stockmovement"
                                android:textSize="15dp"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:background="@mipmap/Next"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnStockMoveMent"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <FrameLayout
            android:background="@drawable/btngray"
            android:id="@+id/btnDelete"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </FrameLayout>
        <Button
            android:id="@+id/btnAdditem"
            android:textAllCaps="false"
