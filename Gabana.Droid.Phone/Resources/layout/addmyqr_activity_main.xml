<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:id="@+id/textTitle"
            android:text="@string/addmyqr_activity"/>
        <FrameLayout
            android:background="@android:color/transparent"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
   <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_weight="0.8"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/addmyqr_activity_name"
                    android:background="@android:color/transparent"
                    android:textColor="@color/textblackcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:inputType="textAutoCorrect"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/texthintcolor"
                    android:hint="@string/addmyqr_activity_name"
                    android:textColor="@color/editbluecolor"
                    android:id="@+id/txtGiftCode"
                    android:minHeight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/employee_employee_branch"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textBranch"
                        android:gravity="center_vertical"
                        android:text="@string/addmyqr_activity_branch"
                        android:textSize="15dp"
                        android:textColor="@color/textblacklightcolor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:background="@mipmap/Next"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnBranch"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/addmyqr_activity_qrimage"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="1"
                        android:tooltipText="@string/textok"
                        android:maxLines="1"
                        android:layout_marginRight="70dp"
                        android:id="@+id/txtmyQRName"
                        android:gravity="center_vertical"
                        android:text="@string/addmyqr_activity_addqrimage"
                        android:textSize="15dp"
                        android:textColor="@color/textblacklightcolor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:background="@mipmap/addimgitem"
                        android:layout_width="23dp"
                        android:layout_height="23dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnAddImage"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/addmyqr_activity_comment"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <EditText
                        android:id="@+id/txtCOmment"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:hint="@string/addmyqr_activity_comment"
                        android:textSize="15dp"
                        android:minHeight="20dp"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnComment"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@android:color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:contentDescription="@string/addmyqr_activity"
                        android:id="@+id/ImgQRCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnImgShoqQRCode"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <FrameLayout
            android:id="@+id/lnShowDelete"
            android:background="@drawable/btngray"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <FrameLayout
                android:id="@+id/lnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <Button
            android:id="@+id/btnAdd"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/btnborderblue"
            android:textColor="@color/editbluecolor"
            android:text="@string/addmyqr_activity_addmyqr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
