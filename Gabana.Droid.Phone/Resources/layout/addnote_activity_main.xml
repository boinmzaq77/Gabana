<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/lnBack"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textTitle"
            android:text="@string/addnote_activity_title"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="@string/addnote_activity_notecategory"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtNameCategory"
                    android:textColor="@color/textblackcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:layout_weight="1"
                    style="@style/Divider"
                    android:id="@+id/spinNoteCategory"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/imgNoteCategory"
                    android:scaleType="fitXY"
                    android:background="@mipmap/Next"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/colorbackground"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:text="@string/addnote_activity_note"
                android:textColor="@color/textblackcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:inputType="textAutoCorrect"
                android:textSize="15dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texthintcolor"
                android:hint="@string/addnote_activity_note"
                android:textColor="@color/editbluecolor"
                android:id="@+id/textNote"
                android:minHeight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorbackground"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <android.support.v7.widget.RecyclerView
                android:layout_gravity="center_horizontal"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:id="@+id/recyclerview_listSubNote" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/colorbackground"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <FrameLayout
            android:background="@drawable/btngray"
            android:id="@+id/btnDelete"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </FrameLayout>
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:id="@+id/btnAdd"
            android:textColor="@color/editbluecolor"
            android:text="@string/item_activity_addnote"
            android:background="@drawable/btnborderblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
