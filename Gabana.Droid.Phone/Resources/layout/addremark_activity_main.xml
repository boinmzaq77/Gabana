<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/lnBack"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:text="@string/addremark_activity_title"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer" />
                <TextView
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:text="@string/addremark_activity_remark"
                android:background="@android:color/transparent"
                android:id="@+id/txtNameCategory"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:inputType="textAutoComplete"
                android:maxLength="50"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texthintcolor"
                android:hint="@string/addremark_activity_remark"
                android:textColor="@color/editbluecolor"
                android:id="@+id/txtRemark"
                android:minHeight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorbackground"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:id="@+id/btnSave"
            android:textColor="@color/editbluecolor"
            android:text="@string/textdone"
            android:background="@drawable/btnborderblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
