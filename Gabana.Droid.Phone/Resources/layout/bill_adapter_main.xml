<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CACACA"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lnheaderbar"
                android:background="@color/colorbackground"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:maxLines="1"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtDay"
                    android:textColor="@color/textblackcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text=","
                    android:background="@android:color/transparent"
                    android:textColor="@color/textblackcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtnumberdate"
                    android:textColor="@color/textblackcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <FrameLayout
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/imageViewPaymentIcon"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:scaleType="fitXY"/>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_marginLeft="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="15dp"
                                android:maxLines="1"
                                android:gravity="center_vertical"
                                android:background="@android:color/transparent"
                                android:id="@+id/txtBillNo"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/txtshowtime"
                            android:textColor="@color/textblacklightcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:maxLines="1"
                            android:id="@+id/txtCustomerName"
                            android:textSize="15dp"
                            android:textColor="@color/textblacklightcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="right | center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:minWidth="100dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="฿"
                            android:id="@+id/txtCurrency"
                            android:textSize="15dp"
                            android:textColor="@color/editbluecolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/txtPrice"
                            android:text="150.00"
                            android:maxLines="1"
                            android:layout_gravity="right"
                            android:textSize="15dp"
                            android:textColor="@color/editbluecolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:minHeight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/txtVoid"
                        android:text="@string/billhistory_activity_void"
                        android:maxLines="1"
                        android:layout_gravity="right"
                        android:textSize="15dp"
                        android:textColor="@color/textorange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/txtPending"
                        android:text="Pending"
                        android:maxLines="1"
                        android:layout_gravity="right"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
