<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>
        <LinearLayout
            android:id="@+id/lnShowoption"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="11dp"
                android:paddingTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/dialog_option_cart_Option"
                    android:textColor="@color/textblackcolor"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"            
             />
                <TextView
                    android:textColor="@color/textblacklightcolor"
                    android:text="@string/textcancle"
                    android:layout_gravity="right"
                    android:id="@+id/txtcancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"            
             />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/lnVoid"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="65dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/voidbill"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/colorclearcart"
                    android:text="@string/bill_dialog_void"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtaddRemark" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
