<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="0.1"
                android:layout_marginRight="2dp"
                android:id="@+id/txtTitle"
                android:layout_marginLeft="60dp"
                android:text="@string/billfilter_activity_title"
                android:maxLines="1"
                android:textSize="15dp"
                android:textColor="@color/textblackcolor"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="12dp"
                android:visibility="visible"
                android:id="@+id/lnShowFilterByBranch"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:textColor="@color/textorange"
                android:text="@string/billfilter_activity_customizedate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_margin="10dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="false">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:paddingLeft="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/textblackcolor"
                            android:text="@string/report_activity_startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginRight="65dp"
                            android:id="@+id/txtStartDate"
                            android:textAlignment="viewEnd"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/primaryDark"
                            android:textSize="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="right"
                                android:background="@mipmap/dbcalendar"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/lnStartDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <View
                        android:background="@color/colorbackground"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <FrameLayout
                        android:paddingLeft="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/textblackcolor"
                            android:text="@string/report_activity_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginRight="65dp"
                            android:id="@+id/txtEndDate"
                            android:textAlignment="viewEnd"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/textblacklightcolor"
                            android:textSize="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="right"
                                android:background="@mipmap/dbcalendar"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/lnEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:id="@+id/lnShowFilterByItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:textSize="15dp"
                    android:textColor="@color/textorange"
                    android:text="@string/billfilter_activity_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_margin="10dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="6dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:paddingLeft="25dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textSize="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/textblackcolor"
                                    android:text="@string/billfilter_activity_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/txtItem"
                                    android:maxLines="1"
                                    android:layout_marginRight="60dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/textblacklightcolor"
                                    android:textSize="13dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:scaleType="fitXY"
                                    android:layout_marginRight="20dp"
                                    android:layout_gravity="right"
                                    android:background="@mipmap/next"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lnSelectItem"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:id="@+id/lnShowFilterByCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:textSize="15dp"
                    android:textColor="@color/textorange"
                    android:text="@string/report_activity_customer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_margin="10dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="6dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:paddingLeft="25dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textSize="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/textblackcolor"
                                    android:text="@string/report_activity_customer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/txtCustomer"
                                    android:maxLines="1"
                                    android:layout_marginRight="60dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/textblacklightcolor"
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:scaleType="fitXY"
                                    android:layout_marginRight="20dp"
                                    android:layout_gravity="right"
                                    android:background="@mipmap/next"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lnSelectCustomer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:id="@+id/lnShowFilterByEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:textSize="15dp"
                    android:textColor="@color/textorange"
                    android:text="@string/report_activity_employee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_margin="10dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="6dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:paddingLeft="25dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textSize="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/textblackcolor"
                                    android:text="@string/report_activity_employee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/txtEmployee"
                                    android:maxLines="1"
                                    android:layout_marginRight="60dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/textblacklightcolor"
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:scaleType="fitXY"
                                    android:layout_marginRight="20dp"
                                    android:layout_gravity="right"
                                    android:background="@mipmap/next"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lnSelectEmployee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="@string/search_menu_title"
            android:background="@drawable/btnblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnViewReport" />
    </LinearLayout>
</LinearLayout>
