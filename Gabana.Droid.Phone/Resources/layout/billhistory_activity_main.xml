<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>

        <TextView
            android:text="@string/bill_activity_title"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:background="@android:color/transparent"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/lnBranch"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="wrap_content"
                android:layout_height="33dp">
                <TextView
                    android:layout_margin="3dp"
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBranchName" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:id="@+id/lnChooseBranch"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/btngraycolor"
        android:layout_height="45dp">
        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:gravity="center"
            android:minWidth="45dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnSearchBill">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnSearchBill" />
        </LinearLayout>
        <EditText
            android:id="@+id/txtSearchBill"
            android:hint="@string/bill_activity_search"
            android:maxLines="1"
            android:maxLength="20"
            android:inputType="textAutoCorrect"
            android:textColor="@color/primaryDark"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
         <RelativeLayout
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="45dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/reportfilter"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <FrameLayout
                android:id="@+id/lnSearchFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="@color/btngraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_weight="0.6"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecycleView"
                    android:layout_gravity="center_horizontal"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:id="@+id/lnNoBill"
                android:background="@color/colorbackground"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/defaultbillhistory"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/bill_activity_nobill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
             <LinearLayout
                android:id="@+id/lnNoDataSearch"
                android:visibility="gone"
                android:background="@color/colorbackground"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="@string/item_activity_nodatasearch"
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/defaultnodata"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/item_activity_nodatasearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
