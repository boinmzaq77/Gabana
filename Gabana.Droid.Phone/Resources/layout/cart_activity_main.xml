<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="@color/colorbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>

        <TextView
            android:text="@string/cart_activity_title"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

         <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer" />
                <TextView
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/frameEmptyCart"
        android:layout_width="300dp"
        android:layout_height="200dp">
        <ImageView
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@mipmap/DefaultItem"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/textblacklightcolor"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_activity_emptycart"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/lnShowcart"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_weight="0.6"
            android:id="@+id/recyclerview_listitemcart"
            android:layout_gravity="center_horizontal"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/lnCartdetail"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/lnRemark"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/Remark"
                    android:layout_gravity="center_vertical"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:id="@+id/textRemark"
                    android:maxLength="25"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#E2E2E2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/texttotal"
                    android:textColor="@color/textblackcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textTotal"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/editbluecolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/btngraycolor"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"/>
            <LinearLayout
                android:id="@+id/lnDiscountMember"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/textMember"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Member 5%"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textNumMember"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="center_vertical"
                    android:text="-8.50"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/btngraycolor"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"/>
            <LinearLayout
                android:id="@+id/lnShowDiscount"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/textCartDiscount"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Discount 1%"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textNumDiscount"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="center_vertical"
                    android:text="-1.75"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/btngraycolor"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"/>
            <LinearLayout
                android:id="@+id/lnVat"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/textVat"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Vat (7%)"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textNumVat"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="center_vertical"
                    android:text="11.54"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/btngraycolor"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"/>

            <LinearLayout
                android:id="@+id/lnShowService"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/textCartService"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Service Charg 1%"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textNumService"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="center_vertical"
                    android:text="-1.75"
                    android:textColor="@color/textgraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/btngraycolor"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameShowOption"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <FrameLayout
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgShowOption"
                android:background="@drawable/btngray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/imgShowOption2"
                android:background="@mipmap/option"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_width="21dp"
                android:layout_height="21dp"/>
            <FrameLayout
                android:id="@+id/frameClickOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <Button
            android:textAllCaps="false"
            android:layout_marginLeft="60dp"
            android:textSize="16dp"
            android:id="@+id/btnCheckOut"
            android:background="@drawable/btnblue"
            android:text="@string/cart_activity_checkout"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>
