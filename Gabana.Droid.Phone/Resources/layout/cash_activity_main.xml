<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayoutHeader">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <TextView
            android:layout_marginRight="3dp"
            android:textSize="15dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:text="@string/cash_title"
            android:textColor="#404040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer" />
                <TextView
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#F8F8F8"
            android:orientation="vertical"
            android:gravity="bottom"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutBody">
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="@string/amount_received"
                android:textColor="@color/textblacklightcolor"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtdescrpit_amount" />
            <TextView
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:autoSizeMinTextSize="20dp"
                android:textSize="40dp"
                android:autoSizeMaxTextSize="40dp"
                android:textAlignment="center"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/primary"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/txtAmount" />
            <TextView
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="@string/payment_amount"
                android:textColor="@color/textblackcolor"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/txtpayment_amount" />
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:minHeight="10dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/recyclerCashGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.design.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                app:chipSpacing="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorbackground"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_weight="2"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber1"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="1"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber2"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="2"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber3"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="3"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber4"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="4"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber5"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="5"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber6"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="6"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber7"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="7"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber8"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="8"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber9"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="9"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnpoint"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="."/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber0"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="0"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btndeletenumber"
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:background="@mipmap/del"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearLayout1">
            <Button
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="@string/btnCharge"
                android:background="@drawable/btnblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCharge" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>