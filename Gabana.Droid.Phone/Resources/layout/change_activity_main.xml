<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/lnBack"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack" />
        </LinearLayout>
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:text="@string/change_title"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer" />
                <TextView
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorbackground"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/textblacklightcolor"
                android:layout_gravity="center_vertical"
                android:text="@string/amount_received"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textreceive"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="100.00"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textblackcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@android:color/white"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/linearLayoutBody">
            <TextView
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="@string/change_title"
                android:textColor="@color/textblackcolor"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtdescrpit_amount" />
            <TextView
                android:layout_marginTop="28dp"
                android:gravity="center_vertical"
                android:text="0.00"
                android:textSize="60dp"
                android:textColorHint="#0095DA"
                android:textColor="#0095DA"
                android:inputType="numberDecimal"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textChange" />
            <TextView
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="@string/textbaht"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSignMoney" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearLayout1">
            <Button
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/editbluecolor"
                android:text="@string/btnviewreceipt"
                android:background="@drawable/btnborderblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnViewREceipt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>