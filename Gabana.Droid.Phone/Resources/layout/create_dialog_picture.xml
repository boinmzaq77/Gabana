<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#0FEAB5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearNext">
            <TextView
                android:text="Add a new Image"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_height="match_parent"
                android:id="@+id/textView3" />
            <ImageView
                android:src="@mipmap/password"
                android:layout_width="match_parent"
                android:layout_marginRight="1dp"
                android:layout_gravity="end"
                android:background="@drawable/abc_btn_borderless_material"
                android:layout_height="match_parent"
                android:id="@+id/imageView1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#0FEAB5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lnTakePicture">
            <TextView
                android:text="Take Picture"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_height="match_parent"
                android:id="@+id/textTakePicture" />
            <ImageView
                android:src="@drawable/arrow_r"
                android:layout_width="match_parent"
                android:layout_marginRight="1dp"
                android:layout_gravity="end"
                android:background="@drawable/abc_btn_borderless_material"
                android:layout_height="match_parent"
                android:id="@+id/imageView1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#0FEAB5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lnBrowseimage">
            <TextView
                android:text="Browse image"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_height="match_parent"
                android:id="@+id/textTakePicture" />
            <ImageView
                android:src="@drawable/arrow_r"
                android:layout_width="match_parent"
                android:layout_marginRight="1dp"
                android:layout_gravity="end"
                android:background="@drawable/abc_btn_borderless_material"
                android:layout_height="match_parent"
                android:id="@+id/imageView1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>