<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:text="@string/dashboard_activity_title"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/lnBranch"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="wrap_content"
                android:layout_height="33dp">
                <TextView
                    android:layout_margin="3dp"
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBranchName" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:id="@+id/lnChooseBranch"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:id="@+id/txtDate1"
                            android:textColor="@color/textblackcolor"
                            android:text="@string/showreport_activity_today"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtDate2"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/primaryDark"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lnDate"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:scaleType="fitXY"
                            android:layout_marginRight="20dp"
                            android:background="@mipmap/dbcalendar"
                            android:layout_gravity="center_vertical"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:id="@+id/lnHaveDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:background="@android:color/white"
                        app:cardCornerRadius="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="75dp">
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/dbsales"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <LinearLayout
                            android:layout_marginLeft="70dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txtSaleTotal"
                                android:textColor="@color/primaryDark"
                                android:textSize="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@string/dashboard_activity_saletotal"
                                android:textColor="@color/textblackcolor"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="70dp">
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            app:cardCornerRadius="4dp"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginLeft="15dp"
                                    android:background="@mipmap/dbcount"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"/>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/txtSaleCount"
                                        android:textColor="@color/primaryDark"
                                        android:textSize="18dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:text="@string/dashboard_activity_salecount"
                                        android:textColor="@color/textblackcolor"
                                        android:textSize="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            app:cardCornerRadius="4dp"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginLeft="15dp"
                                    android:background="@mipmap/dbprofit"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"/>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/txtProfit"
                                        android:textColor="@color/primaryDark"
                                        android:textSize="16dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:text="@string/dashboard_activity_profit"
                                        android:textColor="@color/textblackcolor"
                                        android:textSize="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            app:cardCornerRadius="4dp"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginLeft="15dp"
                                    android:background="@mipmap/dbavg"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"/>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/txtAvgSale"
                                        android:textColor="@color/primaryDark"
                                        android:textSize="18dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:text="@string/dashboard_activity_averagesale"
                                        android:textColor="@color/textblackcolor"
                                        android:textSize="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            app:cardCornerRadius="4dp"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginLeft="15dp"
                                    android:background="@mipmap/dbcompare"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"/>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="15dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/txtComparison"
                                        android:textColor="@color/primaryDark"
                                        android:textSize="16dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:text="@string/dashboard_activity_comparison"
                                        android:textColor="@color/textblackcolor"
                                        android:textSize="14dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="15dp"
                            android:textColor="@color/textorange"
                            android:text="@string/dashboard_activity_salebyperiod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:padding="10dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Microcharts.Droid.ChartView
                                android:id="@+id/chartView1"
                                android:background="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="15dp"
                            android:textColor="@color/textorange"
                            android:text="@string/dashboard_activity_salebypaymenttype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="180dp">
                                <Microcharts.Droid.ChartView
                                    android:background="@android:color/white"
                                    android:id="@+id/chartView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </FrameLayout>
                            <FrameLayout    
                                android:layout_weight="0.5"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/recyclerViewChart2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="15dp"
                            android:textColor="@color/textorange"
                            android:text="@string/dashboard_activity_bestsele"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_listBestSele"
                            android:layout_gravity="center_horizontal"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="15dp"
                            android:textColor="@color/textorange"
                            android:text="@string/dashboard_activity_bestemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:padding="10dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerViewEmp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lnNoDashboard"
                    android:background="@color/colorbackground"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:background="@mipmap/DefaultDashbard"
                        android:scaleType="fitXY"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/dashboard_activity_nodata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
