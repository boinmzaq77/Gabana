<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/textblackcolor"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/device_activity_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight ="0.8">
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="@string/device_activity_deviceno"
                android:textColor="@color/textblackcolor"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLines="1"
                android:maxLength="50"
                android:layout_marginLeft="15dp"
                android:inputType="text"
                android:id="@+id/textDeviceNo"
                android:background="@android:color/transparent"
                android:hint="@string/device_activity_deviceno"
                android:textColor="@color/secondaryText"
                android:textColorHint="@color/texthintcolor"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorbackground"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="@string/device_activity_udid"
                android:textColor="@color/textblackcolor"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLines="1"
                android:maxLength="50"
                android:layout_marginLeft="15dp"
                android:inputType="text"
                android:id="@+id/textUdid"
                android:background="@android:color/transparent"
                android:hint="@string/device_activity_udid"
                android:textColor="@color/secondaryText"
                android:textColorHint="@color/texthintcolor"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorbackground"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="@string/device_activity_comment"
                android:textColor="@color/textblackcolor"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLines="1"
                android:maxLength="50"
                android:layout_marginLeft="15dp"
                android:inputType="text"
                android:id="@+id/textComment"
                android:background="@android:color/transparent"
                android:hint="@string/device_activity_comment"
                android:textColor="@color/editbluecolor"
                android:textColorHint="@color/texthintcolor"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:id="@+id/btnSave"
            android:textAllCaps="false"
            android:background="@drawable/btnborderblue"
            android:textColor="@color/editbluecolor"
            android:textSize="15dp"
            android:text="@string/textsave"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
