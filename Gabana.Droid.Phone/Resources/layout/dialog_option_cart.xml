<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    android:id="@+id/main_content"
    tools:ignore="MissingDimension"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout
        android:background="#00000000"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnShowoption"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="11dp"
                android:paddingTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/dialog_option_cart_Option"
                    android:textColor="@color/textblackcolor"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"            
             />
                <TextView
                    android:textColor="@color/textblacklightcolor"
                    android:text="@string/textcancle"
                    android:layout_gravity="right"
                    android:id="@+id/txtcancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"            
             />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/lnaddRemark"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="65dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/remark"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/textblackcolor"
                    android:text="@string/dialog_option_cart_addremark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtaddRemark" />
            </LinearLayout>
            <FrameLayout
                android:visibility="visible"
                android:id="@+id/lnRemark"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="65dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleType="fitXY"
                        android:background="@mipmap/remark"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:text="@string/addremark_activity_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtRemark" />
                    <TextView
                        android:textSize="15dp"
                        android:maxLines="1"
                        android:textColor="@color/editbluecolor"
                        android:text="@string/addremark_activity_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtShowRemark" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lndeleteRemark"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_width="65dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgDeleteRemark"
                        android:scaleType="fitXY"
                        android:background="@mipmap/trash"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/lnAddDiscount"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="65dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="65dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/discountcart"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <TextView
                    android:text="@string/dialog_option_cart_adddiscount"
                    android:layout_width="match_parent"
                    android:textColor="@color/textblackcolor"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAddDiscount" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnClearCart"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="65dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="65dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/clearcart"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <TextView
                    android:text="@string/dialog_option_cart_clearcart"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorclearcart"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtClearCart" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
