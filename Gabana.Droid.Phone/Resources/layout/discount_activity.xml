<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:text="@string/discount"
            android:textSize="15dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:id="@+id/lnSearchDiscount"
        android:background="@color/btngraycolor"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageButton
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/search"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <EditText
            android:layout_marginLeft="50dp"
            android:inputType="textAutoComplete"
            android:textSize="15dp"
            android:textColor="@color/editbluecolor"
            android:id="@+id/editSearchDiscount"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_below="@id/lnSearchDiscount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:background="@color/colorbackground"
            android:id="@+id/recyclerview_listDiscount"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <Button
            android:textAllCaps="false"
            android:textSize="13dp"
            android:text="@string/item_activity_adddiscount"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@id/recyclerview_listDiscount"
            android:layout_alignEnd="@id/recyclerview_listDiscount"
            android:layout_width="119dp"
            android:layout_height="40dp"
            android:background="@drawable/btnloginprimary"
            android:id="@+id/addDiscount" />
    </RelativeLayout>
</LinearLayout>
