<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/textblackcolor"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/employee"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lnEmpRole"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="15dp"
                android:background="@mipmap/EmployeeRoles"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:orientation="horizontal"
        android:background="@color/btngraycolor"
        android:id="@+id/lnSearchTopping"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnSearchEmployee"
                android:background="@mipmap/Search"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/textSearch"
            android:hint="@string/employee_employee_search"
            android:textSize="16dp"
            android:inputType="textAutoCorrect"
            android:maxLines="1"
            android:maxLength="50"
            android:textColor="@color/editbluecolor"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/framEmployee"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_listemployee"
                    android:layout_gravity="center_horizontal"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:id="@+id/lnNoDataSearch"
                    android:visibility="gone"
                    android:background="@color/colorbackground"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:background="@mipmap/defaultnodata"
                        android:scaleType="fitXY"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/item_activity_nodatasearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </FrameLayout>
            <ImageButton
                android:textAllCaps="false"
                android:textSize="12dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/framEmployee"
                android:layout_alignEnd="@id/framEmployee"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/add"
                android:id="@+id/btnAddEmployee" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
