<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:text="@string/filter_activity_main"
            android:textColor="@color/textblackcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:background="@color/colorbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/lnSortTime"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="25dp"
                android:background="@mipmap/sorttime"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"
                android:layout_width="28dp"/>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnTime"
                android:background="@android:color/transparent"
                android:paddingLeft = "75dp"
                android:layout_gravity = "left"
                android:textColor="@color/textblackcolor"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text= "@string/report_sortbytime"/>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgSelectTime"
                    android:background="@mipmap/Check"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorbackground"/>

        </FrameLayout>

        <FrameLayout
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="25dp"
                android:background="@mipmap/sortdesc"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"
                android:layout_width="28dp"/>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnDes"
                android:background="@android:color/transparent"
                android:paddingLeft = "75dp"
                android:layout_gravity = "left"
                android:textColor="@color/textblackcolor"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text= "@string/report_descending"/>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgSelectDes"
                    android:background="@mipmap/Check"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorbackground"/>

        </FrameLayout>
        <FrameLayout
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="25dp"
                android:background="@mipmap/sortasc"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"
                android:layout_width="28dp"/>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnAsc"
                android:background="@android:color/transparent"
                android:paddingLeft = "75dp"
                android:layout_gravity = "left"
                android:textColor="@color/textblackcolor"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text= "@string/report_ascending"/>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgSelectAsc"
                    android:background="@mipmap/Check"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorbackground"/>

        </FrameLayout>
        <FrameLayout
            android:id="@+id/lnSortAZ"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="25dp"
                android:background="@mipmap/sortaz"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"
                android:layout_width="28dp"/>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnAz"
                android:background="@android:color/transparent"
                android:paddingLeft = "75dp"
                android:layout_gravity = "left"
                android:textColor="@color/textblackcolor"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text= "A-Z"/>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgSelectAz"
                    android:background="@mipmap/Check"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorbackground"/>
        <FrameLayout
            android:id="@+id/lnSortZA"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="25dp"
                android:background="@mipmap/sortza"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"
                android:layout_width="28dp"/>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnZa"
                android:background="@android:color/transparent"
                android:paddingLeft = "75dp"
                android:layout_gravity = "left"
                android:textColor="@color/textblackcolor"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text= "Z-A"/>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgSelectZa"
                    android:background="@mipmap/Check"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout1">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/editbluecolor"
            android:text="@string/filter_activity_filter"
            android:background="@drawable/btnborderblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" />
    </LinearLayout>
</LinearLayout>