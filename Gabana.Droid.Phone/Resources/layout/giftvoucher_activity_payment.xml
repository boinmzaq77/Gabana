<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayoutHeader">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <TextView
            android:textSize="15dp"
            android:layout_weight="0.1"
            android:layout_marginRight="3dp"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:text="@string/gvpayment_activity_title"
            android:textColor="#404040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer" />
                <TextView
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:visibility="visible"
                android:background="@android:color/white"
                android:id="@+id/recyclerview_listGiftvoucher"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lnNoGiftvoucher"
                android:background="@color/colorbackground"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/DefaultGiftVoucher"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/giftvoucher_activity_nogiftvoucher1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/lnBtnApply">
                <Button
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:text="@string/gvpayment_activity_apply"
                    android:background="@drawable/btnblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnApply" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>