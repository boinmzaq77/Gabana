<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <requestFocus />
    <FrameLayout
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imagebtnBack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/item_activity_item"
                android:id="@+id/textItemTitle"
                android:textColor="@color/textblackcolor"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnBack"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerHeaderItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <FrameLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--tab_Item-->
        <LinearLayout
            android:id="@+id/tabItem"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refreshlayoutTabitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/relativeLayoutTabitem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchItem"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_gravity="center"
                                android:id="@+id/btnSearchItem"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchItem"
                            android:hint="@string/item_activity_search"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/editbluecolor"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_gravity="center"
                                android:id="@+id/btnSearchItemBarcode"
                                android:scaleType="fitXY"
                                android:background="@drawable/ScanBlue"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>

                    </FrameLayout>
                    
                    <FrameLayout
                        android:id="@+id/framItem"
                        android:layout_below="@id/lnSearchItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_listitem"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoItem"
                            android:visibility="gone"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultitem"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnNoDataSearchItem"
                            android:visibility="gone"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                           
                        </LinearLayout>


                    </FrameLayout>

                    <ImageButton
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:scaleType="fitXY"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignBottom="@id/framItem"
                        android:layout_alignEnd="@id/framItem"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@mipmap/add"
                        android:id="@+id/additem" />
                </RelativeLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
        <!--tab_Topping-->
        <LinearLayout
            android:id="@+id/tabTopping"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refreshlayoutTopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/relativeLayoutTabTopping"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchTopping"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnSearchTopping"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchTopping"
                            android:hint="@string/extra_activity_Search"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/editbluecolor"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/framItemextra"
                        android:layout_below="@id/lnSearchTopping"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_listTopping"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoItemExtra"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaulttopping"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noextra1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noextra2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnNoDataSearchItemExtra"
                            android:visibility="gone"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                           
                        </LinearLayout>

                    </FrameLayout>
                    <ImageButton
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignBottom="@id/framItemextra"
                        android:layout_alignEnd="@id/framItemextra"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@mipmap/add"
                        android:id="@+id/addTopping" />
                </RelativeLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

        <!--tab_Stock-->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/tabStock"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refreshlayoutTabStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/relativeLayoutTabStock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchStock"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnSearchStock"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchStock"
                            android:hint="@string/item_activity_search"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/editbluecolor"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <TextView
                        android:maxLines="1"
                        android:textAlignment="textEnd"
                        android:id="@+id/txtStockRevision"
                        android:layout_below="@id/lnSearchStock"
                        android:textColor="@color/textblacklightcolor"
                        android:textSize="10dp"
                        android:paddingRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:id="@+id/framStock"
                        android:layout_below="@id/txtStockRevision"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_listStock"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoStock"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultstock"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                          <LinearLayout
                            android:id="@+id/lnNoDataSearchStock"
                            android:visibility="gone"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                           
                        </LinearLayout>
                    </FrameLayout>
                    <ImageButton
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="100dp"
                        android:layout_alignBottom="@id/framStock"
                        android:layout_alignEnd="@id/framStock"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@mipmap/scrolltop"
                        android:id="@+id/btnScollToTop" />
                </RelativeLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
        <!--tab_Category-->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/tabCategory"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refreshlayoutTabCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/relativeLayoutTabCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchCategory"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnSearchCategory"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchCategory"
                            android:hint="@string/item_activity_searchcategory"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/editbluecolor"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/framCategory"
                        android:layout_below="@id/lnSearchCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_listCategory"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoCategory"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultcategory"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nocategory1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nocategory2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                          <LinearLayout
                            android:id="@+id/lnNoDataSearchCategory"
                            android:visibility="gone"
                            android:background="@color/colorbackground"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                           
                        </LinearLayout>
                    </FrameLayout>
                    <ImageButton
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignBottom="@id/framCategory"
                        android:layout_alignEnd="@id/framCategory"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@mipmap/add"
                        android:id="@+id/addcategory" />
                </RelativeLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
