<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@mipmap/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        app:itemIconPadding="15dp"
        android:theme="@style/AppTheme.Main"
        app:itemTextAppearance="@style/TextStyleMenu"
        app:itemTextAppearanceActive="@style/TextStyleMenu"
        app:itemTextAppearanceInactive="@style/TextStyleMenu"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:menu="@menu/activity_main_drawer">
        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/lnPackage"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btnblue"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:contentDescription="@string/package_activity"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@mipmap/MenuPackage"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/textIcon"
                    android:text="@string/package_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/textIcon"
                    android:text="@string/package_activity_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>