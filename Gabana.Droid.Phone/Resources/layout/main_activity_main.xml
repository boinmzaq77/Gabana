<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:weightSum="2.4"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/framProfile"
            android:layout_weight="1.4"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shadowRadius="5"
                android:outlineSpotShadowColor="@color/btngraycolor"
                android:layout_gravity="center"
                android:background="@drawable/mainlightblue"
                android:id="@+id/img_Card" />
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="110dp">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardViewColor"
                        android:layout_gravity="center"
                        android:layout_width="110dp"
                        app:cardCornerRadius="55dp"
                        android:layout_height="110dp">
                        <ImageView
                            android:background="@color/editbluecolor"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardViewImage"
                        android:background="@color/btngraycolor"
                        android:layout_gravity="center"
                        android:layout_width="105dp"
                        app:cardCornerRadius="52.5dp"
                        android:layout_height="105dp">
                        <ImageView
                            android:id="@+id/imgProfile"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </android.support.v7.widget.CardView>
                </FrameLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="@string/texthi"
                        android:id="@+id/text_Hi"/>
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/primary"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:id="@+id/text_Username" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/textblackcolor"
                    android:id="@+id/text_Company" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_activity_main"
                        android:textSize="12dp"
                        android:textColor="@color/textgraycolor"
                        android:gravity="center"   />
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="@color/textgraycolor"
                        android:id="@+id/text_Branch" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:background="@drawable/cornercard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>
        <LinearLayout
            android:background="@android:color/transparent"
            android:id="@+id/lnMenu"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgPos"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/pos"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu1"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/border"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framPos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgItem"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/item"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu2"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="5dp"
                        android:background="@drawable/border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgCustomer"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/customer"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu3"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="5dp"
                        android:background="@drawable/border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgEmployee"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/employee"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu4"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/border"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framEmployee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgDashboard"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/Dashboard"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu5"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="5dp"
                        android:background="@drawable/border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgReport"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/report"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu6"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="5dp"
                        android:background="@drawable/border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgSetting"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/setting"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu7"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/border"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framSetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgHistory"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/History"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu8"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="5dp"
                        android:background="@drawable/border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framHistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgQR"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/qrsetting"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>
                    <TextView
                        android:text="@string/menu9"
                        android:textSize="12dp"
                        android:layout_marginBottom="23dp"
                        android:textColor="@color/textblackcolor"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="5dp"
                        android:background="@drawable/border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:id="@+id/framQR"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
