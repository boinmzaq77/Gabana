<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:text="@string/membertype_activity_title"
            android:textColor="@color/textblackcolor"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/lnMembertype"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:gravity="bottom"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/textorange"
                        android:textSize="15dp"
                        android:text="@string/membertype_activity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom"
                        android:textColor="@color/colorrule"
                        android:text="@string/membertype_activity_max"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:visibility="visible"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/white"
                    android:id="@+id/recyclerview_listMembertype"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lnNoMembertype"
                    android:background="@color/colorbackground"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:background="@mipmap/DefaultMemberType"
                        android:scaleType="fitXY"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/membertyp_activity_no1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/membertyp_activity_no2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>

            <ImageButton
                android:textColor="@android:color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/lnMembertype"
                android:layout_alignEnd="@id/lnMembertype"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:background="@mipmap/add"
                android:id="@+id/addMembertype" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_weight="0.8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/textorange"
                android:textSize="15dp"
                android:text="@string/membertype_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:textColor="@color/colorrule"
                android:text="@string/membertype_activity_max"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:text="@string/membertype_activity_typename"
                android:textSize="15dp"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtTypeName1"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:hint="@string/membertype_activity_typename"
                android:textSize="15dp"
                android:maxLength="50"
                android:maxLines="1"
                android:inputType="textAutoCorrect"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/editbluecolor"
                android:minHeight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:text="@string/membertype_activity_discount"
                android:textSize="15dp"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtDiscount1"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:hint="%"
                android:textSize="15dp"
                android:maxLength="50"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:minHeight="20dp"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/editbluecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorbackground"/>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:text="@string/membertype_activity_typename"
                android:textSize="15dp"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtTypeName2"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:hint="@string/membertype_activity_typename"
                android:textSize="15dp"
                android:maxLength="50"
                android:maxLines="1"
                android:inputType="textAutoCorrect"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/editbluecolor"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:text="@string/membertype_activity_discount"
                android:textSize="15dp"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtDiscount2"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:hint="%"
                android:textSize="15dp"
                android:maxLength="50"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/editbluecolor"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorbackground"/>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:text="@string/membertype_activity_typename"
                android:textSize="15dp"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtTypeName3"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:hint="@string/membertype_activity_typename"
                android:textSize="15dp"
                android:maxLength="50"
                android:maxLines="1"
                android:minHeight="20dp"
                android:inputType="textAutoCorrect"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/editbluecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:text="@string/membertype_activity_discount"
                android:textSize="15dp"
                android:textColor="@color/textblackcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtDiscount3"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:hint="%"
                android:textSize="15dp"
                android:maxLength="50"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/editbluecolor"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout1">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/editbluecolor"
            android:text="@string/textsave"
            android:background="@drawable/btnborderblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" />
    </LinearLayout>
</LinearLayout>