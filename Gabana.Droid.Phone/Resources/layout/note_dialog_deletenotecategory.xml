<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension" 
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:paddingTop="22dp"
            android:id="@+id/textconfirm1"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/note_dialog_delete_1"
            android:textAlignment="center"
            android:textSize="16dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/note_dialog_delete_2"
            android:textAlignment="center"
            android:textSize="16dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#E6E6E6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_cancel"
            android:textColor="#000000"
            android:layout_weight="0.6"
            android:background="@android:color/transparent"
            android:text="@string/textcancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#E6E6E6"/>
        <Button
            android:id="@+id/btn_Delete"
            android:textAllCaps="false"
            android:textColor="#0095DA"
            android:layout_weight="0.6"
            android:background="@android:color/transparent"
            android:text="@string/textsave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>