<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:background="@color/colorbackground"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="40dp">
    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="false">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="65dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_marginLeft="25dp"
                    android:id="@+id/btnSelectExtra"
                    android:background="@mipmap/OptionBlank"
                    android:scaleType="fitXY"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="25dp"
                android:layout_marginLeft="65dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/textblackcolor"
                            android:id="@+id/textToppingName"
                            android:textSize="15dp"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:weightSum="3"
                            android:layout_weight="0.1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <FrameLayout
                                android:id="@+id/btnReExtra"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:background="@mipmap/DelQty"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/txtUnitExtra"
                                android:maxLength="3"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="999"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <FrameLayout
                                android:layout_weight="1"
                                android:id="@+id/btnAddExtra"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:background="@mipmap/AddQty"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"/>
                            </FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="0.1"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/textPriceExtra"
                                android:maxLength="7"
                                android:maxLines="1"
                                android:textSize="15dp"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/textblackcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
