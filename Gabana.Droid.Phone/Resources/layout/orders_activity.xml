<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/textblackcolor"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/orders_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lnHelper"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="15dp"
                android:background="@mipmap/EmployeeRoles"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:id="@+id/lnSearchTopping"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnSearchTopping"
                android:background="@mipmap/Search"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/textSearchTopping"
            android:inputType="textAutoCorrect"
            android:maxLines="1"
            android:maxLength="50"
            android:textColor="@color/editbluecolor"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnSort"
                android:background="@mipmap/sortasc"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
    </FrameLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/lnOrder"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_listorder"
                    android:layout_gravity="center_horizontal"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorrule"
                    android:text="@string/order_activity_noorder2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_weight="0.8"
                android:id="@+id/lnNoOrder"
                android:background="@color/colorbackground"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/DefaultBillHistory"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/order_activity_noorder1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/order_activity_noorder2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
