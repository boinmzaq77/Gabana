<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_alignParentTop =  "true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/primary">
            <ImageButton
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/Back" />
            <TextView
                android:layout_marginLeft="-35dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/login_fragment_otp_tital"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical"
            android:layout_gravity="center">
            <ImageView
                android:src="@mipmap/otp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
            <TextView
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#212121"
                android:text = "@string/login_fragment_otp_verify_l1"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#212121"
                android:text = "@string/login_fragment_otp_verify_l2"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="5dp"
                    android:id = "@+id/txtnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:textColor="#212121"
                    android:text = "@string/login_fragment_otp_verify_l3" />
                <TextView
                    android:text=","
                    android:paddingTop="5dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/txtref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text = "@string/login_fragment_otp_verify_l4"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id = "@+id/lnotp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation = "horizontal"
            android:gravity = "center">
            <TextView
                android:id="@+id/editText1"
                android:textColor = "@color/primary"
                android:background="@drawable/edittxtborderbox"
                android:gravity = "center"
                android:layout_width = "40dp"
                android:layout_height="50dp"
                android:maxLength ="1"
                android:maxLines = "1"/>
            <View
                android:layout_width="10dp"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#fff"/>
            <TextView
                android:id="@+id/editText2"
                android:textColor = "@color/primary"
                android:background="@drawable/edittxtborderbox"
                android:gravity = "center"
                android:layout_width = "40dp"
                android:layout_height="50dp"
                android:maxLength ="1"
                android:maxLines = "1"/>
            <View
                android:layout_width="10dp"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#fff"/>
            <TextView
                android:id="@+id/editText3"
                android:textColor = "@color/primary"
                android:background="@drawable/edittxtborderbox"
                android:gravity = "center"
                android:layout_width = "40dp"
                android:layout_height="50dp"
                android:maxLength ="1"
                android:maxLines = "1"/>
            <View
                android:layout_width="10dp"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#fff"/>
            <TextView
                android:id="@+id/editText4"
                android:textColor = "@color/primary"
                android:background="@drawable/edittxtborderbox"
                android:gravity = "center"
                android:layout_width = "40dp"
                android:layout_height="50dp"
                android:maxLength ="1"
                android:maxLines = "1"/>
            <View
                android:layout_width="10dp"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#fff"/>

            <TextView
                android:id="@+id/editText5"
                android:textColor = "@color/primary"
                android:background="@drawable/edittxtborderbox"
                android:gravity = "center"
                android:layout_width = "40dp"
                android:layout_height="50dp"
                android:maxLength ="1"
                android:maxLines = "1"/>

            <View
                android:layout_width="10dp"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#fff"/>
            <TextView
                android:id="@+id/editText6"
                android:textColor = "@color/primary"
                android:background="@drawable/edittxtborderbox"
                android:gravity = "center"
                android:layout_width = "40dp"
                android:layout_height="50dp"
                android:maxLength ="1"
                android:maxLines = "1"/>
        </LinearLayout>
        <EditText
            android:cursorVisible="false"
            android:layout_marginTop="-60dp"
            android:inputType="number"
            android:focusable="auto"
            android:textSize="40dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/transparent"
            android:maxLines="1"
            android:maxLength="6"
            android:id="@+id/textOTP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id = "@+id/txtAleart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>
</LinearLayout>