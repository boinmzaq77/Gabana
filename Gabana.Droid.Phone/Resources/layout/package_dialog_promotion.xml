<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    android:id="@+id/main_content"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:contentDescription="@string/login_fragment_main_btn_back"
                            android:background="@mipmap/backb"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:id="@+id/btnBack"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/textblackcolor"
                        android:text="@string/package_activity_promotionCode"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:text="@string/package_activity_promotionCode"
                        android:layout_width="wrap_content"
                        android:textColor="@color/textblackcolor"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:inputType="text"
                        android:maxLines="1"
                        android:minHeight="20dp"
                        android:maxLength="20"
                        android:id="@+id/txtPromotionCode"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:hint="@string/package_activity_promotionCode"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnApply"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                    <Button
                        android:id="@+id/btnApply"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDark"
                        android:text="@string/decimalhelper_activity_apply"
                        android:background="@drawable/btnborderblue"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>