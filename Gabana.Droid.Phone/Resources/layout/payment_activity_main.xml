<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:text="@string/payment_activity_title"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer" />
                <TextView
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="#F8F8F8"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/textblacklightcolor"
            android:text="@string/payment_activity_paymentamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textAmount"
            android:textColor="@color/editbluecolor"
            android:textAlignment="center"
            android:text="0.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60dp"/>
        <TextView
            android:id="@+id/textCurrency"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="@color/textblackcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnCash">
                    <ImageButton
                        android:background="@mipmap/paymentcash"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imagCash" />
                    <TextView
                        android:text="@string/payment_activity_cash"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textCash" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/lnCash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnSaveOrder">
                    <ImageButton
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:background="@mipmap/paymentsaveorder"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgOrder" />
                    <TextView
                        android:text="@string/payment_activity_saveorder"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textColor="@color/textblackcolor"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textOrder" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnGiftVoucher">
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@mipmap/paymentgiftvoucher"
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/imagGiftVoucher" />
                    <TextView
                        android:text="@string/payment_activity_gift"
                        android:maxLines="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textGiftVoucher" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnCreditCard">
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@mipmap/paymentcredit"
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageCredit" />
                    <TextView
                        android:text="@string/payment_activity_debit"
                        android:maxLines="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/textblackcolor"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textCredit" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnMyqr">
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@mipmap/paymentqr"
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageMyqr" />
                    <TextView
                        android:text="@string/payment_activity_myqr"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textColor="@color/textblackcolor"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textMyqr" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnQrCash">
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@mipmap/PaymentQRCashG"
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageQrCash" />
                    <TextView
                        android:text="@string/payment_activity_qrcash"
                        android:maxLines="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/btngraycolor"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textQrCash" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnQrCredit">
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@mipmap/PaymentQRCreditG"
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageQrCredit" />
                    <TextView
                        android:text="@string/payment_activity_qrcredit"
                        android:maxLines="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/btngraycolor"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textQrCredit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/lnWechat"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@mipmap/PaymentQRWeChatG"
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageWechat" />
                    <TextView
                        android:text="@string/payment_activity_wechat"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textColor="@color/btngraycolor"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textWechat" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearNext">
        <Button
            android:id="@+id/btnSave"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/editbluecolor"
            android:text="@string/next"
            android:background="@drawable/btnborderblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>