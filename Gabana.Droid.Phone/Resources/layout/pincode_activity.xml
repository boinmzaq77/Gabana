<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/linearback"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textTitle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="@color/primaryDark"
            android:gravity="center"
            android:text="@string/pincode_activity_title"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/textTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:gravity="center"
            android:text="@string/pincode_activity_settingpincode"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:contentDescription="@string/pincode_activity_title"
            android:scaleType="fitXY"
            android:layout_marginTop="21dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/pincode"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/textTypePincode"
            android:textColor="@color/linegraycolor"
            android:layout_marginTop="15dp"
            android:text="@string/pincode_activity_enterpincode"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/userinactive"
                android:id="@+id/imgPin1"
                android:layout_margin="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/userinactive"
                android:id="@+id/imgPin2"
                android:layout_margin="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/userinactive"
                android:id="@+id/imgPin3"
                android:layout_margin="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/userinactive"
                android:id="@+id/imgPin4"
                android:layout_margin="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/userinactive"
                android:layout_margin="10dp"
                android:id="@+id/imgPin5"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:background="@mipmap/userinactive"
                android:layout_margin="10dp"
                android:id="@+id/imgPin6"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:minHeight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtIncorrect"
                android:textSize="14dp"
                android:textColor="@color/textorange"
                android:text="@string/pincode_activity_incor"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14dp"
                android:id="@+id/txtForget"
                android:textColor="@color/editbluecolor"
                android:text="@string/pincode_activity_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@id/btnnumber1"
                android:background="@drawable/ovalgray"
                android:text="1"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <Button
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@id/btnnumber2"
                android:background="@drawable/ovalgray"
                android:text="2"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <Button
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@id/btnnumber3"
                android:background="@drawable/ovalgray"
                android:text="3"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@id/btnnumber4"
                android:background="@drawable/ovalgray"
                android:text="4"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <Button
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@id/btnnumber5"
                android:background="@drawable/ovalgray"
                android:text="5"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <Button
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@id/btnnumber6"
                android:background="@drawable/ovalgray"
                android:text="6"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@id/btnnumber7"
                android:background="@drawable/ovalgray"
                android:text="7"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <Button
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@id/btnnumber8"
                android:background="@drawable/ovalgray"
                android:text="8"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <Button
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@id/btnnumber9"
                android:background="@drawable/ovalgray"
                android:text="9"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/ovalgray"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <Button
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@id/btnnumber0"
                android:background="@drawable/ovalgray"
                android:text="0"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <FrameLayout
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@id/btnDelete"
                android:background="@drawable/ovalgray"
                android:textSize="23dp"
                android:layout_width="65dp"
                android:layout_height="65dp">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/del"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:scaleType="fitXY"
            android:background="@mipmap/PinCode_Gabana"
            android:layout_width="130dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
</LinearLayout>
