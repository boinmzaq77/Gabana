<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayoutHeader">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="@string/pos_activity_title"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer2" />
                <TextView
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewHeaderItem"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <FrameLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/searchitem"
                    android:id="@+id/buttonSearch"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <EditText
                android:layout_marginLeft="50dp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textColor="@color/editbluecolor"
                android:maxLines="1"
                android:maxLength="50"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:id="@+id/txtSearchPos"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:id="@+id/lnGroupButton"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/buttonBarcode"
                    android:background="@mipmap/ScanItem"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity = "center"/>
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:background="@mipmap/Order"
                        android:scaleType="fitXY"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity = "center"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/txtOrderNum"
                        android:textColor="@color/primaryDark"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:id="@+id/lnOrder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/dummy"
                    android:scaleType="fitXY"
                    android:id="@+id/btnDummy"
                    android:layout_marginRight="10dp"
                    android:layout_gravity = "center"/>
                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/viewlist"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:id="@+id/buttonShowMenu"
                    android:layout_marginRight="10dp"
                    android:layout_gravity = "center"/>
                <FrameLayout
                    android:layout_gravity = "center"
                    android:minWidth="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:background="@drawable/borderqauntity"
                        android:id="@+id/btnBasket"
                        android:layout_gravity = "center"/>
                    <TextView
                        android:gravity="center"
                        android:text="x1"
                        android:textSize="9dp"
                        android:id="@+id/txtQuantity"
                        android:textColor="@color/editbluecolor"
                        android:layout_gravity = "center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_weight="0.8"
            android:id="@+id/refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerViewShow" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_margin="6dp"
                        android:id="@+id/imgShowAnime"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"   />
                </FrameLayout>
            </FrameLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linearBtnEarningOrange"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearPayment">
            <TextView
                android:gravity="center"
                android:textSize="19dp"
                android:layout_width="wrap_content"
                android:textColor="@color/editbluecolor"
                android:layout_height="wrap_content"
                android:id="@+id/txtSumary" />
            <TextView
                android:text="No item"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="@color/editbluecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNoItem" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>