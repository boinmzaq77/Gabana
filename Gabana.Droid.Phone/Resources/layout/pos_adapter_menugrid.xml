<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@android:color/white"
    android:outlineAmbientShadowColor="@android:color/white"
    android:outlineSpotShadowColor="@android:color/white"
    app:cardUseCompatPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/cardViewGrid">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="6dp"
            android:id="@+id/imageViewcolorItem"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_weight="1.8"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:id="@+id/imagePicItem"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/textViewItemName"
                    android:maxLength="7"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/lnColorBottom"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="#66000000"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtNameItem"
                    android:text="text"
                    android:textSize="13dp"
                    android:maxLines="1"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:id="@+id/txtItemPrice"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp"
                    android:text="text"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:background="@drawable/corner_menugrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   />
        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagealert"
                android:scaleType="fitXY"
                android:background="@mipmap/IndicatorRed"
                android:layout_width="23dp"
                android:layout_height="23dp"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/frameAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="6dp"
            android:background="@color/btngraycolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/additem"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:background="@drawable/corner_menugrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   />
    </FrameLayout>
    <FrameLayout        
        android:layout_width="match_parent"
        android:layout_height="match_parent"> 
        <ImageView
            android:layout_margin="6dp"
            android:id="@+id/imgShowAnime"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   />
    </FrameLayout>
</android.support.v7.widget.CardView>
   