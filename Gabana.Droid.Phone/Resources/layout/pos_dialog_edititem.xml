<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    android:id="@+id/main_content"
    tools:ignore="MissingDimension"
    android:layout_width="260dp"
    android:layout_height="363dp" >
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="260dp"
        android:layout_height="362dp" >
         <android.support.v7.widget.CardView
            android:layout_gravity="top"
            android:layout_width="260dp"
            android:layout_height="260dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:id="@+id/imageViewcolorItem"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <TextView
                        android:id="@+id/textViewItemName"
                        android:maxLength="7"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="25dp"
                        android:text="Test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#33000000"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                        <TextView
                            android:id="@+id/txtNameItem"
                            android:text="text"
                            android:textSize="13dp"
                            android:layout_marginLeft="13dp"
                            android:textColor="#fff"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtPrice"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"
                            android:layout_marginLeft="13dp"
                            android:textColor="#fff"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_gravity="bottom"
            android:layout_marginBottom="60dp"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>
       <android.support.v7.widget.CardView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="60dp">
            <LinearLayout
                android:background="#F1FAFF"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lnFav"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imageFav"
                        android:src="@mipmap/unfav"
                        android:scaleType="fitXY"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:id="@+id/textFav"
                        android:background="@android:color/transparent"
                        android:text="@string/textfavorite"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="@color/textblackcolor"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texthintcolor"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/lnEdit"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imageEdit"
                        android:src="@mipmap/edit"
                        android:scaleType="fitXY"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:id="@+id/textEdit"
                        android:text="@string/textedit"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="@color/textblackcolor"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/texthintcolor"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/lnOption"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imageOption"
                        android:src="@mipmap/notetopping"
                        android:scaleType="fitXY"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:id="@+id/textOption"
                        android:text="@string/textoption"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="@color/textblackcolor"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                     android:layout_marginBottom="10dp"
                     android:background="@color/texthintcolor"
                     android:layout_width="2dp"
                     android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/lnDelete"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imageOption"
                        android:src="@mipmap/trash"
                        android:scaleType="fitXY"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:id="@+id/textDelete"
                        android:text="@string/textdelete"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="@color/textblackcolor"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>