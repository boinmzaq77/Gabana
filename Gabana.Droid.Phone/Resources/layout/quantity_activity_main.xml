<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/linearLayoutHeader">
            <LinearLayout
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:contentDescription="@string/login_fragment_main_btn_back"
                    android:background="@mipmap/backb"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/imagebtnBack"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="60dp"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:text="@string/quantity_title"
                android:textColor="#404040"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <LinearLayout
                android:id="@+id/lnBack"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <View
            android:background="@color/linegraycolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#F8F8F8"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/linearLayoutBody">
            <ImageButton
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:background="@mipmap/minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imageButtonDecrease" />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:minWidth="187dp"
                android:gravity="center"
                android:textSize="60dp"
                android:autoSizeMaxTextSize="60dp"
                android:autoSizeMinTextSize="18dp"
                android:maxLines="1"
                android:maxLength="7"
                android:hint="0"
                android:textColorHint="#0095DA"
                android:textColor="#0095DA"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextQuantity"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:background="@mipmap/add"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imageButtonIncrease" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber1"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="1"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber2"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="2"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber3"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="3"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber4"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="4"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber5"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="5"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber6"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="6"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber7"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="7"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber8"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="8"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber9"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="9"/>
            </LinearLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text=""/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber0"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="#404040"
                    android:text="0"/>
                <View
                    android:background="@color/colorbackground"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btndeletenumber"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/del"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearLayout1">
            <Button
                android:textSize="16dp"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:text="@string/textdone"
                android:background="@drawable/btnblue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonOK" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>