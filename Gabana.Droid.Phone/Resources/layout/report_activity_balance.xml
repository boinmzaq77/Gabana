<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_marginLeft="60dp"
            android:text="@string/report_activity_title"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="wrap_content"
                android:layout_height="33dp">
                <TextView
                    android:layout_margin="3dp"
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:text="Head Office"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBranchName" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:id="@+id/lnChooseBranch"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerHeader"
            android:layout_gravity="center_horizontal"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"/>
        <FrameLayout
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:id="@+id/lnSearch"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/btnSearch"
                    android:background="@mipmap/Search"
                    android:scaleType="fitXY"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/textSearch"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:maxLength="50"
                android:textColor="@color/editbluecolor"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_width="80dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnAll"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:text="All"
                    android:background="@drawable/btnblue"
                    android:scaleType="fitXY"
                    android:layout_width="38dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </FrameLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerItem"
            android:layout_gravity="center_horizontal"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/textIcon"
            android:text="@string/report_activity_viewreport"
            android:background="@drawable/btnblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnApply" />
    </LinearLayout>
</LinearLayout>
