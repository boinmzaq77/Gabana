<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:text="@string/report_report"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_width="wrap_content"
                android:layout_height="33dp">
                <TextView
                    android:layout_margin="3dp"
                    android:textColor="@color/editbluecolor"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:text="Head Office"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBranchName" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:id="@+id/lnChooseBranch"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ScrollView
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <ImageView
                    android:background="@mipmap/ReportSale"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/textorange"
                    android:text="@string/report_salecategory"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_sale_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnSalesReport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_salebybranch_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnSalesReportByBranch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_profitbycostestimate_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnProfitReport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_salebycategory_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnCategoryReport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_salebycustomer_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnDailyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_salebyemployee_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnDailyEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_salebypaymentmethod_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnDailyPayment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <ImageView
                    android:background="@mipmap/reportitem"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/textorange"
                    android:text="@string/report_itemcategory"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:text="@string/report_bestitem_report"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnBestSellItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:visibility="gone"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/texthintcolor"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/textblackcolor"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnItemBalance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="@color/colorbackground"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
