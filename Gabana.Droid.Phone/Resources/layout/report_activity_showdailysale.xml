<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtTitle"
            android:maxLines="1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:text="@string/report_activity_title"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lnFullReport"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtCustomDate"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:text="@string/showreport_activity_today"
                        android:textSize="15dp"
                        android:textColor="@color/textblackcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:maxLines="1"
                        android:id="@+id/txtDate"
                        android:layout_marginLeft="5dp"
                        android:text="@string/report_activity_today"
                        android:textSize="15dp"
                        android:textColor="@color/primaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtBranchName"
                        android:maxLines="1"
                        android:textAlignment="textEnd"
                        android:layout_marginLeft="5dp"
                        android:text="Head Office"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:textColor="#707070"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtGroupBy"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:textColor="#707070"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorbackground"/>
            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lnHaveData"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/lnHeader"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerHeaderReport"
                            android:layout_gravity="center_horizontal"
                            android:isScrollContainer="false"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/colorbackground"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lnSaleReport"
                        android:visibility="visible"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lnChartSale"
                            android:padding="10dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtTitleChart"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/textorange"
                                android:text="@string/dashboard_activity_salebyperiod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <Microcharts.Droid.ChartView
                                android:id="@+id/chartView"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnTotal"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:layout_margin="10dp"
                                app:cardElevation="1dp"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="false">
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/textTotalName"
                                        android:textAlignment="viewStart"
                                        android:textSize="15dp"
                                        android:maxLines="1"
                                        android:textColor="@color/textorange"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_marginRight="5dp"
                                        android:id="@+id/textGrandTotal"
                                        android:textAlignment="viewEnd"
                                        android:textSize="24dp"
                                        android:maxLines="1"
                                        android:textColor="@color/primaryDark"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                        <FrameLayout
                            android:orientation="horizontal"
                            android:background="@android:color/white"
                            android:id="@+id/lnSearch1"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:layout_width="60dp"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:id="@+id/btnSearch1"
                                    android:background="@mipmap/Search"
                                    android:scaleType="fitXY"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/textSearch1"
                                android:inputType="textAutoCorrect"
                                android:maxLines="1"
                                android:maxLength="50"
                                android:textColor="@color/editbluecolor"
                                android:layout_marginRight="60dp"
                                android:layout_marginLeft="60dp"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:layout_width="80dp"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:id="@+id/imgFilter1"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:background="@mipmap/ReportFilter"
                                    android:scaleType="fitXY"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>
                        </FrameLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTypeTime"
                                android:layout_weight="1"
                                android:layout_marginLeft="25dp"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:textAlignment="textStart"
                                android:gravity="center"
                                android:text="@string/showreport_activity_hour"
                                android:background="@android:color/transparent"
                                android:textColor="#707070"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:layout_marginRight="25dp"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="@string/showreport_activity_sales"
                                android:background="@android:color/transparent"
                                android:id="@+id/txtAmount"
                                android:textColor="#707070"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.RecyclerView
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/recyclerview_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lnCategoryReport"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:orientation="horizontal"
                            android:background="@android:color/white"
                            android:id="@+id/lnSearch2"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:layout_width="60dp"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:id="@+id/btnSearch2"
                                    android:background="@mipmap/Search"
                                    android:scaleType="fitXY"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/textSearch2"
                                android:inputType="textAutoCorrect"
                                android:maxLines="1"
                                android:maxLength="50"
                                android:textColor="@color/editbluecolor"
                                android:layout_marginRight="60dp"
                                android:layout_marginLeft="60dp"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:layout_width="80dp"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:id="@+id/imgFilter2"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:background="@mipmap/ReportFilter"
                                    android:scaleType="fitXY"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>
                        </FrameLayout>
                        <LinearLayout
                            android:id="@+id/lnChart"
                            android:padding="10dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Microcharts.Droid.ChartView
                                android:id="@+id/chartView2"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.RecyclerView
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/recyclerview_listGroup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lnNoData"
                android:background="@color/colorbackground"
                android:orientation="vertical"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/DefaultReport"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/dashboard_activity_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="83dp"
        android:id="@+id/lnShowButton">
        <FrameLayout
            android:visibility="gone"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/billprint"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/textblackcolor"
                    android:text="@string/billhistory_activity_print"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnPrint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/billpdf"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/textblackcolor"
                    android:text="@string/billhistory_activity_pdf"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnPDF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/billmail"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/textblackcolor"
                    android:text="@string/addcustomer_activity_email"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/billshare"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/textblackcolor"
                    android:text="@string/billhistory_activity_share"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
