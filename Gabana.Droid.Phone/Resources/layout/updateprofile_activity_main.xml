<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/backw"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="@color/textIcon"
            android:gravity="center"
            android:text="@string/updateprofile_title"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <FrameLayout
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <LinearLayout
                    android:background="#fff"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="75dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:contentDescription="@string/merchantsetting"
                            android:id="@+id/imgProfile"
                            android:src="@mipmap/logodefault"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="160dp">
                    <FrameLayout
                        android:layout_gravity="bottom"
                        android:layout_width="150dp"
                        android:layout_height="45dp">
                        <ImageButton
                            android:id="@+id/btnAddImage"
                            android:layout_gravity="right"
                            android:background="@mipmap/addimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                    </FrameLayout>
                </FrameLayout>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorbackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/updateprofile_merchantname"
                        android:textColor="#404040"
                        android:textSize="15dp"/>
                    <EditText
                        android:minHeight="20dp"
                        android:inputType="textAutoComplete"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/updateprofile_merchantname"
                        android:textColorHint="@color/texthintcolor"
                        android:textColor="@color/editbluecolor"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:id="@+id/txtMerchantName"/>

                </LinearLayout>
                <View
                    android:background="@color/btngraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/updateprofile_username"
                        android:textColor="#404040"
                        android:textSize="15dp"/>
                    <EditText
                        android:minHeight="20dp"
                        android:inputType="textAutoComplete"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/updateprofile_username"
                        android:textColorHint="@color/texthintcolor"
                        android:textColor="@color/editbluecolor"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:id="@+id/txtUserName"/>
                </LinearLayout>

                 <View
                    android:background="@color/btngraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/updateprofile_referral"
                        android:textColor="#404040"
                        android:textSize="15dp"/>
                    <EditText
                        android:minHeight="20dp"
                        android:inputType="textAutoComplete"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/updateprofile_refcode"
                        android:textColorHint="@color/texthintcolor"
                        android:textColor="@color/editbluecolor"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:id="@+id/txtRef"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <Button
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/textIcon"
                android:textSize="16dp"
                android:text="@string/textregister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btnblue"
                android:id="@+id/btnRegister" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
