<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:fitsSystemWindows="false"
    android:windowSoftInputMode="adjustPan "
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Tab Menu -->
            <LinearLayout
                android:background="@android:color/white"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lnMore"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/more"
                        android:id="@+id/imgMore"
                        android:src="@mipmap/menumore"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtMore"
                        android:text="@string/more"
                        android:textSize="13dp"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnPos"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu1"
                        android:id="@+id/imgPOS"
                        android:src="@mipmap/menupos"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtPOS"
                        android:text="@string/menu1"
                        android:textSize="13dp"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnItem"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu2"
                        android:id="@+id/imgItem"
                        android:src="@mipmap/menuitem"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtItem"
                        android:text="@string/menu2"
                        android:textSize="13dp"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnCustomer"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu3"
                        android:id="@+id/imgCustomer"
                        android:src="@mipmap/menucustomer"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtCustomer"
                        android:textAllCaps="false"
                        android:text="@string/menu3"
                        android:textColor="@color/eclipse"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnEmployee"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu4"
                        android:id="@+id/imgEmployee"
                        android:src="@mipmap/menuemployee"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtEmployee"
                        android:textAllCaps="false"
                        android:text="@string/menu4"
                        android:textColor="@color/eclipse"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnDashboard"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu5"
                        android:id="@+id/imgDashboard"
                        android:src="@mipmap/menudashboard"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtDashboard"
                        android:textAllCaps="false"
                        android:text="@string/dashboard"
                        android:textColor="@color/eclipse"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnReport"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu6"
                        android:id="@+id/imgReport"
                        android:src="@mipmap/menureport"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtReport"
                        android:textAllCaps="false"
                        android:text="@string/menu6"
                        android:textColor="@color/eclipse"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnSetting"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu7"
                        android:id="@+id/imgSetting"
                        android:src="@mipmap/menusetting"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtSetting"
                        android:textAllCaps="false"
                        android:text="@string/menu7"
                        android:textColor="@color/eclipse"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnBillHistory"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                    <ImageView
                        android:contentDescription="@string/menu8"
                        android:id="@+id/imgBillHistory"
                        android:src="@mipmap/menubillhistory"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                    <TextView
                        android:id="@+id/txtBillHistory"
                        android:textAllCaps="false"
                        android:text="@string/menu8"
                        android:textColor="@color/eclipse"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:background="#E8E8E8"
                android:layout_weight="0.4"
                android:id="@+id/content_frameL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="#F8F8F8"
                android:layout_width="0.5dip"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:layout_weight="0.6"
                android:background="#F1FAFF"
                android:id="@+id/content_frameR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
