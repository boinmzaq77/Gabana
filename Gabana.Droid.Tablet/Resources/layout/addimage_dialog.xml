<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="375dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:text="@string/textaddimage"
                android:textColor="@color/eclipse"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/nobel"
                android:text="@string/textcancle"
                android:layout_gravity="right"
                android:id="@+id/txtcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/lnTakePicture"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="65dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/camera"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/eclipse"
                android:text="@string/texttakeapicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTakePicture" />
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/lnChoosPicture"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="65dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/Album"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:text="@string/textchooseyourpicture"
                android:layout_width="match_parent"
                android:textColor="@color/eclipse"
                android:layout_height="wrap_content"
                android:id="@+id/txtChoosPicture" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>