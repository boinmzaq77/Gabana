<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="430dp"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:text="@string/stock_activity_title"
            android:textSize="15dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/swipRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="85dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:layout_margin="2.5dp"
                        android:id="@+id/imageViewItem"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/textViewItemName"
                        android:textColor="@android:color/white"
                        android:maxLength="7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtNameItem"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:text="@string/stockmovement_activity_minimumstock"
                            android:background="@android:color/transparent"
                            android:textColor="@color/nobel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:text="0"
                            android:background="@android:color/transparent"
                            android:id="@+id/txtMinimaumStock"
                            android:textColor="@color/nobel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textSignMoney"
                            android:text="@string/stockmovement_activity_stockbalance"
                            android:textAlignment="textEnd"
                            android:textSize="14dp"
                            android:textColor="@color/nobel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtStockBalance"
                            android:textAlignment="textEnd"
                            android:text="100"
                            android:textSize="20dp"
                            android:textColor="@color/primaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvListStock"
                android:background="@color/whitesmoke"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
