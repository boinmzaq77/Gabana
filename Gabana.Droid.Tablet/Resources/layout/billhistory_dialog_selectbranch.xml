<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:theme="@style/Theme.MyTheme"
    android:windowSoftInputMode="adjustResize"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="430dp"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/eclipse"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/choosebranch_activity_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:orientation="horizontal"
        android:background="@color/btngraycolor"
        android:id="@+id/lnSearchTopping"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnSearch"
                android:background="@mipmap/Search"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/textSearch"
            android:textSize="16dp"
            android:hint="@string/changebranch_activity_search"
            android:inputType="textAutoCorrect"
            android:maxLines="1"
            android:maxLength="50"
            android:textColor="@color/primaryDark"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight ="0.8">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_listbranch"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/lnNoDataSearch"
            android:visibility="gone"
            android:background="@color/whitesmoke"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="60dp"
                android:background="@mipmap/defaultnodata"
                android:scaleType="fitXY"
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:text="@string/item_activity_nodatasearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:id="@+id/btnApply"
            android:text="@string/choosebranch_activity_apply"
            android:background="@drawable/btnbluerectangle"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
