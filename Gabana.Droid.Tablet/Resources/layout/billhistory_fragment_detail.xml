<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/lnBack"
             android:layout_width="200dp"
             android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="7dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderdecimal"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:background="@mipmap/print"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/primaryDark"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPrintCounter" />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/lnPrintCounter"
            android:layout_gravity="right"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/eclipse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTranNo" />
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_weight="0.8"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/lnBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_height="54dp">
                    <FrameLayout
                        android:layout_width="54dp"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="27dp">
                            <ImageView
                                android:id="@+id/imgLogoMerchant"
                                android:background="@mipmap/logodefault"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/textNameMerchant"
                        android:layout_marginLeft="15dp"
                        android:textSize="15dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/app_name"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textTranNo"
                        android:textColor="@color/primaryDark"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textDate"
                            android:textColor="@color/eclipse"
                            android:layout_gravity="left"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textCustomerName"
                            android:textColor="@color/eclipse"
                            android:layout_gravity="right"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <RelativeLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="8dp"
                        android:paddingBottom="8dp"
                        android:id="@+id/rcvListItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/textquantitytotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textTotalItems"
                        android:textSize="15dp"
                        android:textColor="@color/primaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textUnit"
                        android:textSize="15dp"
                        android:textColor="@color/primaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="left"
                            android:text="@string/textsubtotal"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textSubtotalAmount"
                            android:layout_gravity="right"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/lnMemberDiscount"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textMemberDiscount"
                            android:layout_gravity="left"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textMemberDiscountAmount"
                            android:layout_gravity="right"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/lnVat"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textVat"
                            android:layout_gravity="left"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textVatAmount"
                            android:layout_gravity="right"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/lnDiscount"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textDiscount"
                            android:layout_gravity="left"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textDiscountAmount"
                            android:layout_gravity="right"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/lnService"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textService"
                            android:layout_gravity="left"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textServiceAmount"
                            android:layout_gravity="right"
                            android:textColor="@color/eclipse"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <FrameLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textTotal"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:text="@string/texttotal"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textTotalAmount"
                        android:layout_gravity="right"
                        android:textColor="@color/primaryDark"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <FrameLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textCash"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:text="@string/textcash"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textCashAmount"
                        android:layout_gravity="right"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="8dp"
                        android:paddingBottom="8dp"
                        android:id="@+id/rcvListPayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/lnChange"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textChange"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:text="@string/textchange"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textChangeAmount"
                        android:layout_gravity="right"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textCashier"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:text="@string/textchashier"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textCashierName"
                        android:layout_gravity="right"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/lnRemark"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textRemark"
                        android:gravity="left"
                        android:text="@string/addremark_activity_remark"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:maxWidth="150dp"
                        android:id="@+id/textRemarkDetail"
                        android:layout_gravity="right"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/textthank"
                        android:textColor="@color/primaryDark"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/textseniorsoft"
                        android:textColor="@color/eclipse"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/lnReceiptImage"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/billhistory_detail_receiptimage"
                        android:textColor="@color/textorange"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:outlineSpotShadowColor="@color/linegraycolor"
                        android:id="@+id/imgReceiptImage"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:minHeight="200dp"
                        android:minWidth="200dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:background="@android:color/transparent"
                android:id="@+id/frameLayoutReciept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/lnStatusVoid"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="162dp"
                    android:background="@mipmap/voidtext"
                    android:maxHeight="162dp"
                    android:maxWidth="162dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:id="@+id/lnShowButton">
        <FrameLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnShowPrint"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="63dp"
                android:layout_height="63dp">
                <ImageView
                    android:background="@mipmap/billprint"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/eclipse"
                    android:text="@string/billhistory_activity_print"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnPrint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnShowPDF"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="63dp"
                android:layout_height="63dp">
                <ImageView
                    android:background="@mipmap/billpdf"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/eclipse"
                    android:text="@string/billhistory_activity_pdf"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnPDF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnShowEmail"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="63dp"
                android:layout_height="63dp">
                <ImageView
                    android:background="@mipmap/billmail"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/eclipse"
                    android:text="@string/addcustomer_activity_email"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnShowShare"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="63dp"
                android:layout_height="63dp">
                <ImageView
                    android:background="@mipmap/billshare"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/eclipse"
                    android:text="@string/billhistory_activity_share"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnShowVoid"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btnbordergray"
                android:layout_width="63dp"
                android:layout_height="63dp">
                <ImageView
                    android:background="@mipmap/billvoid"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:textColor="@color/eclipse"
                    android:text="@string/billhistory_activity_void"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnVoid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>