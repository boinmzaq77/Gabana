<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="false">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                card_view:cardCornerRadius="35dp"
                android:layout_height="70dp">
                <ImageView
                    android:contentDescription="@string/customer_activity_title"
                    android:id="@+id/imageCustomer"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="25dp"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="textStart"
                android:background="@android:color/transparent"
                android:id="@+id/txtNameCustomer"
                android:textColor="@color/eclipse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
             <LinearLayout
                android:visibility="visible"
                android:layout_marginRight="35dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/imgSelect"
                    android:background="@mipmap/Check"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_gravity="bottom"
            android:background="@color/linegraycolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>
