<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="false">
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameItem"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lnQuanlity"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:text=" 999999 "
                        android:textSize="15dp"
                        android:textColor="@color/eclipse"
                        android:id="@+id/textCountITem"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="x"
                        android:textSize="15dp"
                        android:textColor="@color/nobel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="100dp"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtNameItem"
                        android:textColor="@color/eclipse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15dp"
                            android:gravity="center_vertical"
                            android:text="0.00"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorrule"
                            android:id="@+id/txtPriceBeforeDis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="15dp"
                            android:text="0.00"
                            android:background="@android:color/transparent"
                            android:textColor="@color/texthintcolor"
                            android:id="@+id/txtItemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="right"
                        android:id="@+id/txtPriceTotal"
                        android:textSize="15dp"
                        android:textColor="@color/primaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imageDiscountRow"
                        android:scaleType="fitXY"
                        android:background="@mipmap/discountitem"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:id="@+id/lnDiscountItem"
                android:orientation="horizontal"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0.8"
                    android:textColor="@color/textgray"
                    android:textSize="14dp"
                    android:id="@+id/textItemDiscount"
                    android:text="@string/discount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:contentDescription="@string/cart_activity_discount"
                    android:layout_gravity="right"
                    android:scaleType="fitXY"
                    android:background="@mipmap/DiscItem"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/lnOptionlist"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/scvlistTopping"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:scrollbarSize="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lnCommentItem"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textCommentItem"
                    android:textSize="14dp"
                    android:textColor="@color/nobel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="20dp"
                android:background="@color/whisper"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:id="@+id/lnEditItem"
                android:orientation="horizontal"
                android:background="#F1FAFF"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:id="@+id/lnQuantity"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:background="@mipmap/Quantity"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:textColor="@color/primaryDark"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="@string/cart_activity_quantity"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnOption"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:background="@mipmap/NoteTopping"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:textColor="@color/primaryDark"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="@string/cart_activity_option"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnPrice"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:background="@mipmap/price"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:textColor="@color/primaryDark"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="@string/cart_activity_price"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnDiscount"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:background="@mipmap/DiscountItem"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:textColor="@color/primaryDark"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="@string/cart_activity_discount"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnDelete"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:background="@mipmap/trash"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:textColor="@color/primaryDark"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="@string/textdelete"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
