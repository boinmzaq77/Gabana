<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:text="@string/changeprice_activity_title"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddDiscount" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnClear"
                android:textAllCaps="false"
                android:text="@string/textclear"
                android:textColor="#C8C8C8"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="#F8F8F8"
        android:orientation="vertical"
        android:gravity="center"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <TextView
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="@string/changeprice_activity_itemprice"
            android:textColor="@color/nobel"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="center"
            android:textSize="60dp"
            android:hint="0.00"
            android:textColorHint="@color/texthintcolor"
            android:textColor="@color/primary"
            android:inputType="numberDecimal"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNewPrice" />
        <TextView
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:text="@string/textbaht"
            android:textColor="@color/eclipse"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/btnnumber1"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="1"/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnnumber2"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="2"/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnnumber3"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="3"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/btnnumber4"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="4"/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnnumber5"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="5"/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnnumber6"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="6"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/btnnumber7"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="7"/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnnumber8"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="8"/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnnumber9"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="9"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/btnpoint"
                android:visibility="visible"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="."/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnnumber0"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#404040"
                android:text="0"/>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/btndeletenumber"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:background="@mipmap/del"
                    android:scaleType="fitXY"/>
            </LinearLayout>Butto
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:id="@+id/btnDone"
            android:text="@string/textdone"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:textColor="@color/primaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
