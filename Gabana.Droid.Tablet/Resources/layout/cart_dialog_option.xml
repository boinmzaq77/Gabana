<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    app:cardCornerRadius="5dp"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="430dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lnShowoption"
        android:background="@android:color/white"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:gravity="center"
                android:text="@string/dialog_option_cart_Option"
                android:textColor="@color/eclipse"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"            
             />

            <TextView
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/eclipse"
                android:text="@string/textdone"
                android:layout_gravity="right"
                android:id="@+id/txtDone"
                android:layout_width="80dp"
                android:layout_height="match_parent"            
             />
        </FrameLayout>
        <View
            android:background="@color/linegraycolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lnaddRemark"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/remark"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/eclipse"
                android:text="@string/dialog_option_cart_addremark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="@color/linegraycolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"/>
        <FrameLayout
            android:visibility="visible"
            android:id="@+id/lnRemark"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:background="@mipmap/remark"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="72dp"
                android:layout_marginRight="72dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/eclipse"
                    android:text="@string/dialog_option_cart_addremark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRemark" />
                <EditText
                    android:visibility="gone"
                    android:id="@+id/edtRemark"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:textColor="@color/primaryDark"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lndeleteRemark"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgDeleteRemark"
                    android:scaleType="fitXY"
                    android:background="@mipmap/trash"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@color/linegraycolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"/>
        <FrameLayout
            android:id="@+id/lnAddDiscount"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/discountcart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="72dp"
                android:layout_marginRight="72dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/dialog_option_cart_adddiscount"
                    android:layout_width="match_parent"
                    android:textColor="@color/eclipse"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAddDiscount" />
                <TextView
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:textColor="@color/primaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtShowDiscount" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lndeleteDiscount"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgDeleteDiscount"
                    android:scaleType="fitXY"
                    android:background="@mipmap/trash"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@color/linegraycolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"/>
        <LinearLayout
            android:id="@+id/lnClearCart"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/clearcart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:text="@string/dialog_option_cart_clearcart"
                android:layout_width="match_parent"
                android:textColor="@color/colorclearcart"
                android:layout_height="wrap_content"
                android:id="@+id/txtClearCart" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
