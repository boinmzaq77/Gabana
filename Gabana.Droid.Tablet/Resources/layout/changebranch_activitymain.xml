<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:theme="@style/Theme.MyTheme"
    android:windowSoftInputMode="adjustResize"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/primary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_width="90dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@mipmap/backw"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/changebranch_activity_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@color/btngraycolor"
        android:id="@+id/lnSearch"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/abc_searchview_description_search"
                android:id="@+id/btnSearch"
                android:background="@mipmap/Search"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/textSearch"
            android:inputType="textAutoCorrect"
            android:maxLines="1"
            android:maxLength="50"
            android:textColor="@color/primaryDark"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight ="0.8">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_listbranch"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:id="@+id/btnSave"
            android:text="@string/textsave"
            android:background="@drawable/btnbluerectangle"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
