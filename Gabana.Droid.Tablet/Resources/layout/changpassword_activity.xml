<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:theme="@style/Theme.MyTheme"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/primary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@mipmap/backw"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/changepass_activity_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@color/whitesmoke"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnOldPass"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textColor="@color/eclipse"
                android:textSize="16dp"
                android:layout_marginLeft="16dp"
                android:text="@string/changepass_activity_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/textOld"
                android:hint="@string/changepass_activity_old"
                android:textColorHint="@color/texthintcolor"
                android:textSize="16dp"
                android:background="@android:color/transparent"
                android:textColor="@color/primaryDark"
                android:inputType="textPassword"
                android:maxLength="50"
                android:maxLines="1"
                android:minHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/whitesmoke"/>
        <LinearLayout
            android:id="@+id/lnNewPass"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textColor="@color/eclipse"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:text="@string/changepass_activity_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/textNew"
                android:hint="@string/changepass_activity_new"
                android:textSize="16dp"
                android:textColorHint="@color/texthintcolor"
                android:background="@android:color/transparent"
                android:textColor="@color/primaryDark"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:minHeight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/whitesmoke"/>
        <LinearLayout
            android:id="@+id/lnConfirmPass"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textColor="@color/eclipse"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:text="@string/changepass_activity_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/textConfirm"
                android:hint="@string/changepass_activity_confirm"
                android:textSize="16dp"
                android:textColorHint="@color/texthintcolor"
                android:background="@android:color/transparent"
                android:textColor="@color/primaryDark"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:minHeight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/whitesmoke"/>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/lnPinCode"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/eclipse"
                    android:textSize="16dp"
                    android:text="@string/employee_pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <Switch
                    android:visibility="visible"
                    android:id="@+id/switchShow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="1"
                    android:scaleY="1"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <FrameLayout
            android:id="@+id/lnChange"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:text="@string/employee_pincode"
                    android:textSize="16dp"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:maxLength="50"
                    android:id="@+id/txtChangePincode"
                    android:hint="@string/employee_unshowpassword"
                    android:textSize="16dp"
                    android:inputType="textPassword"
                    android:textColor="@color/eclipse"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnChange"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:text="@string/pincode_activity_chang"
                    android:textColor="@color/primaryDark"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btnwhiteborderblue"
                    android:layout_width="85dp"
                    android:layout_height="35dp"/>
            </FrameLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:layout_margin="12dp"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:id="@+id/btnSave"
            android:text="@string/textsave"
            android:background="@drawable/btnbluerectangle"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
