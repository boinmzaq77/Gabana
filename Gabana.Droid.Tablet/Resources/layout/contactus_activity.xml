<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <FrameLayout
        android:background="@color/primary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/imgBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/backw" />
        </LinearLayout>
        <TextView
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/contactus"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="16dp"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
     <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginLeft = "50dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#E6E6E6"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                   <ImageView
                        android:contentDescription="02-6925899"
                        android:scaleType="fitXY"
                        android:layout_gravity = "center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background = "@mipmap/ContactTel" />
                    <TextView
                        android:paddingLeft = "10dp"
                        android:layout_gravity = "center"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02-6925899"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnTel"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:layout_marginLeft = "50dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#E6E6E6"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:contentDescription="info@seniorsoft.co.th"
                        android:scaleType="fitXY"
                        android:layout_gravity = "center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background = "@mipmap/contactmail" />
                    <TextView
                        android:paddingLeft = "10dp"
                        android:layout_gravity = "center"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="info@seniorsoft.co.th"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnEmail"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:layout_marginLeft = "50dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#E6E6E6"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_gravity = "center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background ="@mipmap/contactline" />
                    <TextView
                        android:paddingLeft = "10dp"
                        android:layout_gravity = "center"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="seniorsoft"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnLine"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:layout_marginLeft = "50dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#E6E6E6"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_gravity = "center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background = "@mipmap/contactfb" />
                    <TextView
                        android:paddingLeft = "10dp"
                        android:layout_gravity = "center"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="seniorsoft"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnFacebook"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:layout_marginLeft = "50dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#E6E6E6"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_gravity = "center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background ="@mipmap/contactsns" />
                    <TextView
                        android:paddingLeft = "10dp"
                        android:layout_gravity = "center"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.seniorsoft.co.th"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lnWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:layout_marginLeft = "50dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#E6E6E6"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:minHeight="60dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity = "center"
                        android:scaleType="fitXY"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background ="@mipmap/contactaddress" />
                    <TextView
                        android:paddingLeft = "10dp"
                        android:layout_gravity = "center"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seniorsoft Development Co., Ltd.2991/23-24 SeniorSoft Bldg.,Wisutthani Project Office Park, Ladprao Rd.,Klongchan, Bangkapi , ฺBangkok 10240"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lnAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="0.5dp"
                android:background="#E6E6E6"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>