<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/abc_searchview_description_search"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:layout_width="36dp"
                android:layout_height="36dp"                
                android:id="@+id/btnSearch"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <EditText
            android:layout_marginLeft="60dp"
            android:background="@android:color/transparent"
            android:hint="@string/customer_activity_seaech"
            android:inputType="textAutoCorrect"
            android:textColor="@color/primaryDark"
            android:maxLines="1"
            android:maxLength="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textSearchCustomer"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>

    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/lnCustomer"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcvCustomer" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lnNoCustomer"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:background="@mipmap/DefaultCustomer"
                        android:scaleType="fitXY"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/customer_activity_nocustomer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/customer_activity_nocustomer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </FrameLayout>
            <ImageButton
                android:textColor="@android:color/white"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/lnCustomer"
                android:layout_alignEnd="@id/lnCustomer"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@mipmap/add"
                android:id="@+id/addCustomer" />
        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>