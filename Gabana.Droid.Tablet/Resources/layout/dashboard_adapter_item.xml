<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/CardAdapter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#CACACA"
        android:paddingBottom="2dp"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="35dp">
                    <ImageView
                        android:layout_margin="3dp"
                        android:id="@+id/imageViewcolorItem"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/textViewItemName"
                        android:textColor="@android:color/white"
                        android:maxLength="7"
                        android:textSize="10dp"
                        android:layout_gravity="center"
                        android:text="Name Item"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                   
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:maxLines="2"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtNameItem"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="gone"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:text="@string/stockmovement_activity_minimumstock"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtMinimumStock"
                        android:textColor="@color/nobel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                          <TextView
                            android:id="@+id/textSignMoney"
                            android:gravity="left"
                            android:textAlignment="viewEnd"
                            android:textSize="14dp"
                            android:textColor="@color/nobel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:maxLines="2"
                            android:id="@+id/txtTotalSale"
                            android:gravity="left"
                            android:textAlignment="viewEnd"
                            android:textSize="14dp"
                            android:textColor="@color/eclipse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ImageButton
                        
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageMoveMent"
                        android:background="@mipmap/album"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </androidx.cardview.widget.CardView>


</FrameLayout>
