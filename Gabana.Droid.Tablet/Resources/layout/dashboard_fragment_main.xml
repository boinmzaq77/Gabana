<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/lnHeader">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/txtDate1"
                android:textColor="@color/eclipse"
                android:text="@string/showreport_activity_today"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtDate2"
                android:layout_marginLeft="6dp"
                android:textColor="@color/primaryDark"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/lnBranch"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderqauntity"
                android:layout_width="wrap_content"
                android:layout_height="33dp">
                <TextView
                    android:layout_margin="3dp"
                    android:textColor="@color/primaryDark"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBranchName" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:id="@+id/lnChooseBranch"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/lnSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lnHaveDashboard"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <FrameLayout
                                    android:layout_marginLeft="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardViewColor"
                                        android:layout_gravity="center"
                                        android:layout_width="95dp"
                                        app:cardCornerRadius="47.5dp"
                                        android:layout_height="95dp">
                                        <ImageView
                                            android:background="@color/primaryDark"
                                            android:scaleType="fitXY"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_height="match_parent"
                                            android:layout_width="match_parent"/>
                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardViewImage"
                                        android:background="@color/btngraycolor"
                                        android:layout_gravity="center"
                                        android:layout_width="90dp"
                                        app:cardCornerRadius="45dp"
                                        android:layout_height="90dp">
                                        <ImageView
                                            android:id="@+id/imgProfile"
                                            android:background="@mipmap/dbmerchantdefault"
                                            android:scaleType="fitXY"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_height="match_parent"
                                            android:layout_width="match_parent"/>
                                    </androidx.cardview.widget.CardView>
                                </FrameLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/txtSaleTotal"
                                        android:text="à¸¿ 12,150.00"
                                        android:minHeight="25dp"
                                        android:textSize="28dp"
                                        android:textColor="@color/primaryDark"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_marginTop="10dp"
                                        android:text="@string/dashboard_activity_saletotal"
                                        android:minHeight="25dp"
                                        android:textSize="16dp"
                                        android:textColor="@color/eclipse"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <LinearLayout
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                                <ImageView
                                                    android:src="@mipmap/dbcount"
                                                    android:layout_marginLeft="30dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_width="48dp"
                                                    android:layout_height="48dp"/>
                                                <LinearLayout
                                                    android:gravity="center_vertical"
                                                    android:orientation="vertical"
                                                    android:layout_marginLeft="20dp"
                                                    android:layout_marginRight="20dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent">
                                                    <TextView
                                                        android:id="@+id/txtSaleCount"
                                                        android:minHeight="24dp"
                                                        android:textColor="@color/primaryDark"
                                                        android:textSize="22dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                    <TextView
                                                        android:minHeight="16dp"
                                                        android:text="@string/dashboard_activity_salecount"
                                                        android:textColor="@color/eclipse"
                                                        android:textSize="16dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                </LinearLayout>
                                            </LinearLayout>
                                            <View
                                                android:background="@color/linegraycolor"
                                                android:layout_width="match_parent"
                                                android:layout_height="0.5dp"/>
                                            <LinearLayout
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                                <ImageView
                                                    android:src="@mipmap/dbavg"
                                                    android:layout_marginLeft="30dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_width="48dp"
                                                    android:layout_height="48dp"/>
                                                <LinearLayout
                                                    android:gravity="center_vertical"
                                                    android:orientation="vertical"
                                                    android:layout_marginLeft="20dp"
                                                    android:layout_marginRight="20dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent">
                                                    <TextView
                                                        android:id="@+id/txtAvgSale"
                                                        android:minHeight="24dp"
                                                        android:textColor="@color/primaryDark"
                                                        android:textSize="22dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                    <TextView
                                                        android:minHeight="16dp"
                                                        android:text="@string/dashboard_activity_averagesale"
                                                        android:textColor="@color/eclipse"
                                                        android:textSize="16dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                        <View
                                            android:background="@color/linegraycolor"
                                            android:layout_width="0.5dp"
                                            android:layout_height="match_parent"/>
                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                                <ImageView
                                                    android:src="@mipmap/dbprofit"
                                                    android:layout_marginLeft="30dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_width="48dp"
                                                    android:layout_height="48dp"/>
                                                <LinearLayout
                                                    android:gravity="center_vertical"
                                                    android:orientation="vertical"
                                                    android:layout_marginLeft="20dp"
                                                    android:layout_marginRight="20dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent">
                                                    <TextView
                                                        android:id="@+id/txtProfit"
                                                        android:minHeight="24dp"
                                                        android:textColor="@color/primaryDark"
                                                        android:textSize="22dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                    <TextView
                                                        android:minHeight="16dp"
                                                        android:text="@string/dashboard_activity_profit"
                                                        android:textColor="@color/eclipse"
                                                        android:textSize="16dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                </LinearLayout>
                                            </LinearLayout>
                                            <View
                                                android:background="@color/linegraycolor"
                                                android:layout_width="match_parent"
                                                android:layout_height="0.5dp"/>
                                            <LinearLayout
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                                <ImageView
                                                    android:src="@mipmap/dbcompare"
                                                    android:layout_marginLeft="30dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_width="48dp"
                                                    android:layout_height="48dp"/>
                                                <LinearLayout
                                                    android:gravity="center_vertical"
                                                    android:orientation="vertical"
                                                    android:layout_marginLeft="20dp"
                                                    android:layout_marginRight="20dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent">
                                                    <TextView
                                                        android:id="@+id/txtComparison"
                                                        android:minHeight="24dp"
                                                        android:textColor="@color/primaryDark"
                                                        android:textSize="24dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                    <TextView
                                                        android:minHeight="16dp"
                                                        android:text="@string/dashboard_activity_comparison"
                                                        android:textColor="@color/eclipse"
                                                        android:textSize="16dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"/>
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="15dp"
                                android:id="@+id/txtsalebyperiod"
                                android:textColor="@color/textorange"
                                android:text="@string/dashboard_activity_salebyperiod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_below="@id/txtsalebyperiod"
                                android:padding="10dp"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <Microcharts.Droid.ChartView
                                    android:id="@+id/chartView1"
                                    android:background="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="15dp"
                                android:id="@+id/txtSaleByPaymentType"
                                android:textColor="@color/textorange"
                                android:text="@string/dashboard_activity_salebypaymenttype"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_below="@id/txtSaleByPaymentType"
                                android:padding="10dp"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <Microcharts.Droid.ChartView
                                        android:background="@android:color/white"
                                        android:id="@+id/chartView2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/rcvPayment"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="15dp"
                                android:id="@+id/txtItemBest"
                                android:textColor="@color/textorange"
                                android:text="@string/dashboard_activity_bestsele"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_below="@id/txtItemBest"
                                android:padding="10dp"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rcvBestSale"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="15dp"
                                android:id="@+id/txtBestSale"
                                android:textColor="@color/textorange"
                                android:text="@string/dashboard_activity_bestemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_below="@id/txtBestSale"
                                android:padding="10dp"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rcvEmp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_weight="0.8"
                android:id="@+id/lnNoDashboard"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/DefaultDashbard"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/dashboard_activity_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
