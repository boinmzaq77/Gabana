<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    app:cardCornerRadius="5dp"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="430dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="75dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/eclipse"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/choose_emplyee_roles"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvlistemployeerole"
            android:layout_gravity="center_horizontal"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:id="@+id/btnApply"
            android:textSize="16dp"
            android:textColor="@color/textIcon"
            android:text="@string/apply_emplyee_roles"
            android:background="@drawable/btnbluerectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>
