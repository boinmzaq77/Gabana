<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/lnSearch"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnSearchEmployee"
                android:background="@mipmap/Search"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/textSearch"
            android:hint="@string/employee_employee_search"
            android:textSize="16dp"
            android:inputType="textAutoCorrect"
            android:maxLines="1"
            android:maxLength="50"
            android:textColor="@color/primaryDark"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/framEmployee"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvlistemployee"
                    android:layout_gravity="center_horizontal"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:id="@+id/lnNoDataSearch"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:background="@mipmap/defaultnodata"
                        android:scaleType="fitXY"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/item_activity_nodatasearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </FrameLayout>
            <ImageButton
                android:textAllCaps="false"
                android:textSize="12dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/framEmployee"
                android:layout_alignEnd="@id/framEmployee"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/add"
                android:id="@+id/btnAddEmployee" />
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
