<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/CardAdapter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#CACACA"
        android:paddingBottom="2dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="85dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:layout_margin="2.5dp"
                        android:id="@+id/imageViewcolorItem"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/textViewItemName"
                        android:maxLines="1"
                        android:textColor="@android:color/white"
                        android:maxLength="7"
                        android:layout_gravity="center"
                        android:text="Name Item"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imagealert"
                            android:scaleType="fitXY"
                            android:background="@mipmap/IndicatorRed"
                            android:layout_width="15dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtNameItem"
                        android:textColor="@color/eclipse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:textColor="@color/nobel"
                        android:id="@+id/txtCategoryItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnFav"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtItemPrice"
                            android:maxLines="1"
                            android:gravity="left"
                            android:textAlignment="viewEnd"
                            android:textSize="14dp"
                            android:textColor="@color/primaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/textSignMoney"
                            android:gravity="left"
                            android:textAlignment="viewEnd"
                            android:textSize="14dp"
                            android:textColor="@color/primaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/btnFavorite"
                        android:background="@mipmap/unfav"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>
