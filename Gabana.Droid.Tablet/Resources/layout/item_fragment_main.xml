<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <requestFocus />
   
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvTabMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <FrameLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--tab_Item-->
        <LinearLayout
            android:id="@+id/tabItem"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipTabitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchItem"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_gravity="center"
                                android:id="@+id/btnSearchItem"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="32dp"
                                android:layout_height="32dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchItem"
                            android:hint="@string/item_activity_search"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/primaryDark"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_gravity="center"
                                android:id="@+id/btnSearchItemBarcode"
                                android:scaleType="fitXY"
                                android:background="@mipmap/scanitem"
                                android:layout_width="32dp"
                                android:layout_height="32dp"/>
                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/framItem"
                        android:layout_below="@id/lnSearchItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvListItem"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoItem"
                            android:visibility="gone"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultitem"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnNoDataSearchItem"
                            android:visibility="gone"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </FrameLayout>

                    <ImageButton
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:scaleType="fitXY"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignBottom="@id/framItem"
                        android:layout_alignEnd="@id/framItem"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/add"
                        android:id="@+id/additem" />
                </RelativeLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
        <!--tab_Topping-->
        <LinearLayout
            android:id="@+id/tabTopping"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipTabTopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchTopping"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnSearchTopping"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="32dp"
                                android:layout_height="32dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchTopping"
                            android:hint="@string/extra_activity_Search"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/primaryDark"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/framTopping"
                        android:layout_below="@id/lnSearchTopping"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvListTopping"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoTopping"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaulttopping"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noextra1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noextra2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnNoDataSearchTopping"
                            android:visibility="gone"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </FrameLayout>
                    <ImageButton
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignBottom="@id/framTopping"
                        android:layout_alignEnd="@id/framTopping"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/add"
                        android:id="@+id/addTopping" />
                </RelativeLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
        <!--tab_Stock-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/tabStock"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipTabStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchStock"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnSearchStock"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="32dp"
                                android:layout_height="32dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchStock"
                            android:hint="@string/item_activity_search"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/primaryDark"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <TextView
                        android:maxLines="1"
                        android:textAlignment="textEnd"
                        android:id="@+id/txtStockRevision"
                        android:layout_below="@id/lnSearchStock"
                        android:textColor="@color/nobel"
                        android:textSize="10dp"
                        android:paddingRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:id="@+id/framStock"
                        android:layout_below="@id/txtStockRevision"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvListStock"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoStock"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultstock"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_noitem2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnNoDataSearchStock"
                            android:visibility="gone"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </FrameLayout>
                    <ImageButton
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="100dp"
                        android:layout_alignBottom="@id/framStock"
                        android:layout_alignEnd="@id/framStock"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@mipmap/ScrollTop"
                        android:id="@+id/btnScollToTop" />
                </RelativeLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
        <!--tab_Category-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/tabCategory"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipTabCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@color/btngraycolor"
                        android:id="@+id/lnSearchCategory"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnSearchCategory"
                                android:background="@mipmap/Search"
                                android:scaleType="fitXY"
                                android:layout_width="32dp"
                                android:layout_height="32dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/textSearchCategory"
                            android:hint="@string/item_activity_searchcategory"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/primaryDark"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/framCategory"
                        android:layout_below="@id/lnSearchCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvListCategory"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/lnNoCategory"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultcategory"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nocategory1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nocategory2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnNoDataSearchCategory"
                            android:visibility="gone"
                            android:background="@color/whitesmoke"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="60dp"
                                android:background="@mipmap/defaultnodata"
                                android:scaleType="fitXY"
                                android:layout_width="300dp"
                                android:layout_height="175dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="70dp"
                                android:layout_marginRight="70dp"
                                android:textSize="16dp"
                                android:textAlignment="center"
                                android:text="@string/item_activity_nodatasearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </FrameLayout>
                    <ImageButton
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignBottom="@id/framCategory"
                        android:layout_alignEnd="@id/framCategory"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/add"
                        android:id="@+id/addCategory" />
                </RelativeLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
