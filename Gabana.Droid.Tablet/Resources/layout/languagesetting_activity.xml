<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary">
        <LinearLayout
            android:layout_width="90dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/imgBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/backw" />
        </LinearLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/languagesetting"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="16dp"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
     <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:padding="5dp"
        android:background="@color/whitesmoke"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
          <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/langth"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnThai"
                android:background="@android:color/transparent"
                android:paddingLeft = "60dp"
                android:layout_gravity = "left"
                android:textColor="@color/eclipse"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text= "@string/contactus_activity_thai"/>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgCheck1"
                    android:background="@mipmap/check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/whitesmoke"/>
        <FrameLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/languagesetting"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/langen"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnEnglish"
                android:background="@android:color/transparent"
                android:paddingLeft = "60dp"
                android:layout_gravity = "left"
                android:textColor="@color/eclipse"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text= "@string/contactus_activity_eng" />
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="@string/languagesetting"
                    android:id="@+id/imgCheck2"
                    android:background="@mipmap/check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout1">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/primaryDark"
            android:text="@string/textsave"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" />
    </LinearLayout>
</LinearLayout>