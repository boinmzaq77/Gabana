<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:background="@color/aliceblue"
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnHead"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--image profile -->
            <FrameLayout
                android:id="@+id/framProfile"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="110dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewColor"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    app:cardCornerRadius="55dp"
                    android:layout_height="110dp">
                    <ImageView
                        android:background="@color/primaryDark"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewImage"
                    android:layout_margin="2.5dp"
                    android:background="@color/btngraycolor"
                    android:layout_gravity="center"
                    android:layout_width="107dp"
                    android:layout_height="107dp">
                    <ImageView
                        android:id="@+id/imgProfile"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <!--Text profile -->
            <RelativeLayout
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Text Emp Name -->
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/texthi"
                        android:text="@string/texthi"
                        android:textColor="@color/primaryDark"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtEmployeeName"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/primaryDark"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!--Text Merchant Name -->
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:minHeight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtMerchantID"
                        android:textColor="@color/eclipse"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtMerchantName"
                        android:textColor="@color/eclipse"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!--Text Branch Name / Package Name -->
                <FrameLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtBranch"
                            android:text="@string/main_activity_main"
                            android:textColor="@color/grey"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtBranchName"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:textColor="@color/grey"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout   
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtPackage"
                            android:text="@string/more_fragment_package"
                            android:textColor="@color/grey"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtPackageName"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:textColor="@color/grey"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </FrameLayout>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/lnHead"
                    android:id="@+id/btnLogout"
                    android:background="@drawable/btnBorderGray"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imgLogout"
                        android:contentDescription="@string/logout"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/menulogout"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        
        
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/whitesmoke"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--menu More -->
        <LinearLayout
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lnMore1"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--change password -->
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnChangePassword"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenupassword"
                            android:src="@mipmap/menupassword"
                            android:contentDescription="@string/changepassword"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/txtchangepassword"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/changepassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--change branch -->
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnChangeBranch"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenubranch"
                            android:src="@mipmap/menubranch"
                            android:contentDescription="@string/changebranch"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/imgchangebranch"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/changebranch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--language setting -->
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnChangeLanguage"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenulanguage"
                            android:src="@mipmap/menulanguage"
                            android:contentDescription="@string/languagesetting"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/imglanguagesetting"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/languagesetting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--language setting -->
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnContactUs"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenucontact"
                            android:src="@mipmap/menucontact"
                            android:contentDescription="@string/contactus"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/imgcontactus"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/contactus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/lnMore1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--term -->
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnTerm"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenupolicy"
                            android:src="@mipmap/menupolicy"
                            android:contentDescription="@string/changepassword"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/imgtermconditions"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/termconditions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--gabana guildes -->
                    <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnGuides"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenuguide"
                            android:src="@mipmap/menuguide"
                            android:contentDescription="@string/changebranch"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/imgguide"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/guide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <!--change package -->
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnPackage"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenupackage"
                            android:src="@mipmap/menupackage"
                            android:contentDescription="@string/changebranch"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/textPack1"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/package_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                          <TextView
                            android:id="@+id/textPack2"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="เริ่มต้น 750 บาท/เดือน"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            
                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_width="275dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lnMyQr"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgmenumyqr"
                            android:src="@mipmap/menumyqr"
                            android:contentDescription="@string/changebranch"
                            android:background="@android:color/transparent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/txtMyqr"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/eclipse"
                            android:textSize="20dp"
                            android:text="@string/myqrcash_activity_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                         
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:minHeight="90dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/version"
                android:src="@mipmap/pincode_gabana"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/versions"
                    android:textColor="@color/nobel"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtVersion"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/nobel"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>