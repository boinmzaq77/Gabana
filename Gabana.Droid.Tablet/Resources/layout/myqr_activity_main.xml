<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical">
    <FrameLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/linearLayoutHeader">
        <LinearLayout
            android:gravity="center"
            android:layout_width="75dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"
            android:text="@string/myqr_activity_title"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnMyqr"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvMyQR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lnNomyQR"
            android:background="@color/whitesmoke"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="60dp"
                android:background="@mipmap/defaultmyqr"
                android:scaleType="fitXY"
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:text="@string/myqr_activity_nomyqr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>