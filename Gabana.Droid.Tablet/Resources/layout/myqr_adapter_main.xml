<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:padding="12dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:layout_width="430dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/CardAdapter"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:cardElevation="5dp"
        tools:cardCornerRadius="25dp"
        tools:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#F1FAFF"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:id="@+id/txtqrName"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/addmyqr_activity_name"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:id="@+id/txtqrbranchName"
                    android:gravity="center_vertical"
                    android:text="@string/employee_employee_branch"
                    android:textSize="16dp"
                    android:textColor="@color/textgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:id="@+id/txtqrComment"
                    android:gravity="center_vertical"
                    android:text="@string/addmyqr_activity_comment"
                    android:textSize="16dp"
                    android:textColor="@color/textgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/bitmapimgrQRCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/linegraycolor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:contentDescription="@string/addmyqr_activity_addmyqr"
                        android:id="@+id/imgrQRCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnImgShoqQRCode"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
