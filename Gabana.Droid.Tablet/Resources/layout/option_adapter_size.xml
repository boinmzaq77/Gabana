<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:background="@color/whitesmoke"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="40dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="false">
        <ImageButton
            android:contentDescription="@string/additem_activity_size"
            android:layout_marginLeft="25dp"
            android:id="@+id/btnSelectSize"
            android:background="@mipmap/RadioBlank"
            android:scaleType="fitXY"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
         <TextView
            android:layout_marginLeft="65dp"
            android:textColor="@color/eclipse"
            android:id="@+id/textSizeName"
            android:textSize="15dp"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/eclipse"
            android:id="@+id/textSizePrice"
            android:text="0.00"
            android:layout_marginRight="25dp"
            android:textSize="15dp"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
