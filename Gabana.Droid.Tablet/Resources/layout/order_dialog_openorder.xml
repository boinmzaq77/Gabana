<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension" 
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_gravity="center_vertical"
        android:minHeight="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/textconfirm1"
            android:textColor="@color/eclipse"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/orders_dialog_openorder1"
            android:textAlignment="center"
            android:textSize="16dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/eclipse"
            android:id="@+id/textconfirm2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/orders_dialog_openorder2"
            android:textAlignment="center"
            android:textSize="16dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#E6E6E6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:textAllCaps="false"
            android:id="@+id/btnCancel"
            android:textColor="@color/eclipse"
            android:layout_weight="0.6"
            android:background="@android:color/transparent"
            android:text="@string/textno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#E6E6E6"/>
        <Button
            android:id="@+id/btnOK"
            android:textColor="@color/primaryDark"
            android:layout_weight="0.6"
            android:background="@android:color/transparent"
            android:text="@string/textyes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>