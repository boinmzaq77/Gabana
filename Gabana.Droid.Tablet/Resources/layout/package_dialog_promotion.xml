<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00000000"
    android:id="@+id/main_content"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="400dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:contentDescription="@string/login_fragment_main_btn_back"
                            android:background="@mipmap/backb"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/btnBack"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_marginLeft="60dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/package_activity_promotionCode"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:text="@string/package_activity_promotionCode"
                        android:layout_width="wrap_content"
                        android:textColor="@color/eclipse"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:inputType="text"
                        android:maxLines="1"
                        android:minHeight="20dp"
                        android:maxLength="20"
                        android:id="@+id/txtPromotionCode"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:textSize="16dp"
                        android:hint="@string/package_activity_promotionCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnApply"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <Button
                        android:id="@+id/btnApply"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDark"
                        android:text="@string/decimalhelper_activity_apply"
                        android:background="@drawable/btnwhiteborderbluerd5"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>