<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:id="@+id/lnBack"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:text="@string/balance_activity_title"
            android:textColor="@color/eclipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderqauntity"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/CustB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnCustomer" />
                <TextView
                    android:textColor="@color/primaryDark"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/eclipse"
                android:layout_gravity="center_vertical"
                android:text="@string/balance_activity_total"
                android:textSize="16dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textreceive"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="100.00"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/whitesmoke"/>
        <ScrollView
            android:background="@color/whitesmoke"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/linearLayoutBody">
                <LinearLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/balance_activity_payment"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16dp"
                        android:textColor="@color/textorange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@android:color/white"
                    android:id="@+id/rcvlistpayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:text="@string/change_title"
                    android:textColor="@color/eclipse"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtdescrpit_amount" />
                <TextView
                    android:layout_marginTop="28dp"
                    android:gravity="center_vertical"
                    android:text="0.00"
                    android:textSize="60dp"
                    android:textColorHint="#0095DA"
                    android:textColor="#0095DA"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textChange" />
                <TextView
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:text="@string/textbaht"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textSignMoney" />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:background="@color/whitesmoke"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">
            <Button
                android:foreground="?attr/selectableItemBackground"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:text="@string/btnviewreceipt"
                android:textColor="@color/textIcon"
                android:background="@drawable/btnbluerectangle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnViewREceipt" />
            <Button
                android:foreground="?attr/selectableItemBackground"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                 android:textColor="@color/primaryDark"
                android:background="@drawable/btnwhiteborderbluerd5"
                android:text="@string/balance_activity_backpos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnBackPos" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>