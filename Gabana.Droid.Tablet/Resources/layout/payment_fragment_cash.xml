<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="left"
            android:text="@string/cash_title"
            android:textColor="@color/eclipse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtClear"
            android:layout_marginRight="15dp"
            android:textSize="15dp"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:layout_alignParentRight="true"
            android:text="@string/textclear"
            android:textColor="@color/primaryDark"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#F8F8F8"
            android:orientation="vertical"
            android:gravity="bottom"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="@string/amount_received"
                android:textColor="@color/nobel"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:autoSizeMinTextSize="20dp"
                android:textSize="40dp"
                android:autoSizeMaxTextSize="40dp"
                android:textAlignment="center"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/primary"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/txtAmount" />
            <TextView
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="@string/payment_amount"
                android:textColor="@color/eclipse"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/txtPaymentAmount" />
            <android.support.design.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                app:chipSpacing="5dp"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_weight="2"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber1"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="1"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber2"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="2"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber3"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="3"/>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber4"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="4"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber5"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="5"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber6"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="6"/>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber7"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="7"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber8"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="8"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber9"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="9"/>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnpoint"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="."/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber0"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="0"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btndeletenumber"
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:background="@mipmap/del"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <Button
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:text="@string/btnCharge"
                android:background="@drawable/btnbluerectangle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btncharge" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>