<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:text="@string/debit_activity_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="@string/creditdebit_activity_credittype"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>
            <TextView
                android:text="@string/debit_activity_title"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>
        </LinearLayout>

        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <FrameLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="#F75600"
                android:textSize="15dp"
                android:text="@string/additem_activity_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/btnShowDetail"
                    android:background="@mipmap/detailnotshow"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnShowDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/lnDetails"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/debit_activity_cardtype"
                        android:textColor="@color/eclipse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>
                    <Spinner
                        style="@style/Divider"
                        android:id="@+id/spnCreditType"
                        android:minHeight="20dp"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btnDebitType"
                        android:background="@mipmap/next"
                        android:scaleType="fitXY"
                        android:layout_width="32dp"
                        android:layout_height="32dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:text="@string/debit_activity_cardno"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/txtCreditCardNo"
                    android:inputType="number"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:maxLength="19"
                    android:hint="@string/creditdebit_activity_cardnohint"
                    android:textColorHint="@color/texthintcolor"
                    android:background="@android:color/transparent"
                    android:textColor="@color/primaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <Button
            android:textSize="16dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:text="@string/btnCharge"
            android:background="@drawable/btnbluerectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnSave" />
    </LinearLayout>
</LinearLayout>
