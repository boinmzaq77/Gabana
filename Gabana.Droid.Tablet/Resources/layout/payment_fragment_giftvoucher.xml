<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:layout_weight="0.1"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:layout_gravity="center_vertical"
            android:text="@string/gvpayment_activity_title"
            android:textColor="@color/eclipse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/swipRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                android:background="@android:color/white"
                android:id="@+id/rcvGiftvoucher"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lnNoGiftvoucher"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/DefaultGiftVoucher"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/giftvoucher_activity_nogiftvoucher1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/lnApply">
                <Button
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/white"
                    android:text="@string/gvpayment_activity_apply"
                    android:background="@drawable/btnbluerectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnApply" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>