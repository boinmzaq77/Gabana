<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:text="@string/payment_activity_title"
            android:textSize="15dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnNoCustomer">
            <ImageButton
                android:scaleType="fitXY"
                android:background="@mipmap/cust"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/btnCustomer" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lnHaveCustomer">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderqauntity"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:background="@mipmap/custb"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:id="@+id/btnCustomerB" />
                <TextView
                    android:textColor="@color/primaryDark"
                    android:maxLength="15"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameCustomer" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="15dp"
            android:textSize="15dp"
            android:textColor="@color/textorange"
            android:text="@string/payment_activity_paymentamount"
            android:layout_width="wrap_content  "
            android:layout_height="wrap_content"/>
        <TextView
            android:background="#CBE9F7"
            android:id="@+id/textAmount"
            android:textColor="@color/primaryDark"
            android:textAlignment="viewEnd"
            android:text="0.00"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60dp"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="@string/payment_activity_paymentmethods"
            android:id="@+id/txtMethods"
            android:textColor="@color/textorange"
            android:layout_width="wrap_content  "
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_below="@id/txtMethods"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentcash"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:id="@+id/imagCash" />
                        <TextView
                            android:text="@string/payment_activity_cash"
                            android:maxLines="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="@color/eclipse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCash" />
                    </LinearLayout>
                    <FrameLayout
                        android:orientation="vertical"
                        android:id="@+id/lnCash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:background="@mipmap/paymentsaveorder"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:id="@+id/imgOrder" />
                        <TextView
                            android:text="@string/payment_activity_saveorder"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:textColor="@color/eclipse"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textOrder" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnSaveOrder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentgiftvoucher"
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:id="@+id/imagGiftVoucher" />
                        <TextView
                            android:text="@string/payment_activity_gift"
                            android:maxLines="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textColor="@color/eclipse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textGiftVoucher" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnGiftVoucher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentcredit"
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageCredit" />
                        <TextView
                            android:text="@string/payment_activity_crebit"
                            android:maxLines="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/eclipse"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCredit" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentdebit"
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:text="@string/payment_activity_debit"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:textColor="@color/eclipse"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnDebit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentqr"
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:text="@string/payment_activity_myqr"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:textColor="@color/eclipse"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnMyqr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentqrcashg"
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageQrCash" />
                        <TextView
                            android:text="@string/payment_activity_qrcash"
                            android:maxLines="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/btngraycolor"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textQrCash" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnQrCash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentqrcashg"
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageQrCredit" />
                        <TextView
                            android:text="@string/payment_activity_qrcredit"
                            android:maxLines="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/btngraycolor"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textQrCredit" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnQrCredit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/btnbordergray"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@mipmap/paymentqrwechatg"
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageWechat" />
                        <TextView
                            android:text="@string/payment_activity_wechat"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:textColor="@color/btngraycolor"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textWechat" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/lnWechat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>