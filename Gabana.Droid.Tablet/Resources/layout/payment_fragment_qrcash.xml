<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:text="@string/payment_activity_qrcash"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ImageView
                android:layout_gravity="center"
                android:minWidth="250dp"
                android:minHeight="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bitmapqrcodeimvQRCash" />
    <RelativeLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnMyqr"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:visibility="visible"
                android:minWidth="250dp"
                android:minHeight="250dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imvQRCash" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:id="@+id/btnSave"
            android:textSize="16dp"
            android:textColor="@color/textIcon"
            android:text="@string/myqrcash_activity_save"
            android:background="@drawable/btnbluerectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
