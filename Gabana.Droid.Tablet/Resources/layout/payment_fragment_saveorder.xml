<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textTitle"
            android:text="@string/saveorder_activity_title"
            android:textSize="15dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@color/whitesmoke"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/saveorder_activity_name"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:hint="@string/saveorder_activity_name"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:id="@+id/txtOrderName"
                    android:textColorHint="@color/texthintcolor"
                    android:textColor="@color/primaryDark"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:text="@string/saveorder_activity_comment"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:textSize="15dp"
                android:hint="@string/saveorder_activity_comment"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/primaryDark"
                android:id="@+id/textComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <Button
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:id="@+id/btnSave"
            android:textColor="@android:color/white"
            android:text="@string/saveorder_activity_title"
            android:background="@drawable/btnbluerectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
