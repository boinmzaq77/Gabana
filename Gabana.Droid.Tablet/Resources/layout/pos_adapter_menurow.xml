<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@android:color/white"
    android:outlineAmbientShadowColor="@android:color/white"
    android:outlineSpotShadowColor="@android:color/white"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/cardViewrow"
    android:paddingBottom="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="85dp"
                android:layout_height="65dp">
                <ImageView
                    android:layout_margin="2.5dp"
                    android:id="@+id/imageViewcolorItem"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/textViewItemName"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:maxLength="7"
                    android:text="Name Item"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imagealert"
                        android:scaleType="fitXY"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtNameItem"
                    android:textColor="@color/eclipse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textColor="@color/whitesmoke"
                    android:id="@+id/txtCategoryItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="right"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtItemPrice"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="viewEnd"
                    android:text="000.00"
                    android:textSize="14dp"
                    android:textColor="@color/primaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textSignMoney"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="viewEnd"
                    android:textSize="14dp"
                    android:textColor="@color/primaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/btngraycolor"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/frameAdd"
        android:background="@android:color/white"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/btngraycolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"/>
        <ImageView
            android:background="@mipmap/additem"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:background="@drawable/corner_menugrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="6dp"
            android:id="@+id/imgShowAnime"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   />
    </FrameLayout>
</androidx.cardview.widget.CardView>

