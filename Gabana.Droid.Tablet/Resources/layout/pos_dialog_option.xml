<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    app:cardCornerRadius="5dp"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="430dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/linearLayoutHeader">
            <LinearLayout
                android:id="@+id/lnBack"
                android:gravity="center"
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:contentDescription="@string/login_fragment_main_btn_back"
                    android:background="@mipmap/backb"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btnBack" />
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:text="@string/option_activity_title"
                android:textColor="@color/eclipse"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="75dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
        </FrameLayout>
        <View
            android:background="@color/linegraycolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <ScrollView
            android:layout_weight="0.8"
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="visible"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:id="@+id/lnSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textColor="@color/textorange"
                            android:text="@string/option_activity_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/textorange"
                            android:layout_marginLeft="5dp"
                            android:text="*"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#C8C8C8"
                            android:text="@string/option_activity_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="16dp"
                            android:textColor="#C8C8C8"
                            android:layout_marginLeft="5dp"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewListsize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="@color/whitesmoke"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:id="@+id/lnExtra"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:textSize="16dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/textorange"
                            android:text="@string/option_activity_extra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#C8C8C8"
                            android:text="@string/option_activity_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#C8C8C8"
                            android:text="@string/option_activity_morethan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewExtraCategory"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/recyclerViewExtra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/whitesmoke"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lnNote"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="16dp"
                            android:textColor="@color/textorange"
                            android:text="@string/option_activity_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#C8C8C8"
                            android:text="@string/option_activity_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="16dp"
                            android:textColor="#C8C8C8"
                            android:layout_marginLeft="5dp"
                            android:text="@string/option_activity_morethan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewNoteCategory"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/recyclerViewNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <android.support.design.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        app:chipSpacing="5dp"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="@color/whitesmoke"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:id="@+id/lnComment"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/eclipse"
                        android:textSize="16dp"
                        android:text="@string/option_activity_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:inputType="text"
                        android:id="@+id/textComment"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:maxLength="255"
                        android:background="@android:color/transparent"
                        android:textColorHint="@color/texthintcolor"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:hint="@string/option_activity_note"
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:minHeight="20dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
        
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearLayout1">
            <Button
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:text="@string/option_activity_addtocart"
                android:background="@drawable/btnbluerectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddtoCart" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
