<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:text="@string/scanbarcode_activity_title"
            android:textSize="15dp"
            android:textColor="@color/eclipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        

    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <EDMTDev.ZXingXamarinAndroid.ZXingScannerView
        android:id="@+id/zxscan"
        android:layout_width="match_parent"
        android:layout_height="220dp" />
    <ScrollView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lnBody">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcvListItem" />
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lnCartdetail"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/lnRemark"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/Remark"
                        android:layout_gravity="center_vertical"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:id="@+id/textRemark"
                        android:maxLength="25"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#E2E2E2"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="@string/texttotal"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/eclipse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textTotal"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/btngraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <LinearLayout
                    android:id="@+id/lnDiscountMember"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/textMember"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textNumMember"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/btngraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <LinearLayout
                    android:id="@+id/lnShowDiscount"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/textCartDiscount"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textNumDiscount"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/btngraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <LinearLayout
                    android:id="@+id/lnVat"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/textVat"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textNumVat"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/eclipse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/btngraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>

                <LinearLayout
                    android:id="@+id/lnShowService"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/textCartService"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textNumService"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/btngraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:id="@+id/frameShowOption"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <FrameLayout
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/buttonMore"
                android:background="@drawable/btngray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@mipmap/option"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_width="21dp"
                android:layout_height="21dp"/>
            <FrameLayout
                android:id="@+id/lnOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
       <!-- <Button
            android:layout_marginLeft="60dp"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:id="@+id/buttonPayment"
            android:background="@drawable/btnblue"
            android:text="@string/cart_activity_checkout"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>-->
        <LinearLayout
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lnPayment">
            <TextView
                android:gravity="center"
                android:textSize="19dp"
                android:layout_width="wrap_content"
                android:textColor="@color/primaryDark"
                android:layout_height="wrap_content"
                android:id="@+id/txtSumary" />
            <TextView
                android:text="No item"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="@color/primaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNoItem" />
        </LinearLayout>


    </FrameLayout>
</LinearLayout>