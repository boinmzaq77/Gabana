<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_width="420dp"
    android:layout_height="210dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@android:color/white"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text="@string/billhistory_activity_share"
                android:textColor="@color/eclipse"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/lnBack"
                android:layout_marginLeft="200dp"
                android:orientation="vertical"
                android:gravity="right | center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/deltxt"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="0.8"
            android:background="@color/whitesmoke"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:minHeight="150dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/lnPDF"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/btnwhitebordergrayrd5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/billpdf"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>
                    <TextView
                        android:text="@string/billhistory_activity_pdf"
                        android:textColor="@color/eclipse"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/lnEmail"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/btnwhitebordergrayrd5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/billmail"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>
                    <TextView
                        android:text="@string/billhistory_activity_email"
                        android:textColor="@color/eclipse"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/lnExport"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/btnwhitebordergrayrd5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/billshare"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>
                    <TextView
                        android:text="@string/report_export"
                        android:textColor="@color/eclipse"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>