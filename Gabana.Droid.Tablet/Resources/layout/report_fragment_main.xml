<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="@string/report_report"
            android:textSize="15dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_weight="0.8"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <ImageView
                    android:background="@mipmap/reportsale"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/textorange"
                    android:text="@string/report_salecategory"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_sale_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnSalesReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_salebybranch_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnSalesReportByBranch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_profitbycostestimate_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnProfitReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_salebycategory_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnCategoryReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                    app:cardCornerRadius="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_salebycustomer_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnDailyCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_salebyemployee_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnDailyEmployee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_salebypaymentmethod_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnDailyPayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    tools:visibility="invisible"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <ImageView
                    android:background="@mipmap/reportitem"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/textorange"
                    android:text="@string/report_itemcategory"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="45dp"
                        android:textColor="@color/eclipse"
                        android:text="@string/report_bestitem_report"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/btnBestSellItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    tools:visibility="invisible"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
