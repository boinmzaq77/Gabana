<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@color/whitesmoke"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="75dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtTitle"
            android:maxLines="1"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="10dp"
            android:text="@string/report_activity_title"
            android:textSize="15dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/lnBack"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ScrollView
        android:layout_weight="0.8"
        android:id="@+id/lnFullReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/whitesmoke"
                android:layout_weight="0.4"
                android:id="@+id/lnLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="75dp">
                    <LinearLayout
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtCustomDate"
                            android:layout_marginLeft="20dp"
                            android:maxLines="1"
                            android:text="@string/showreport_activity_today"
                            android:textSize="15dp"
                            android:textColor="@color/eclipse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:maxLines="1"
                            android:id="@+id/txtDate"
                            android:layout_marginLeft="5dp"
                            android:text="@string/report_activity_today"
                            android:textSize="15dp"
                            android:textColor="@color/primaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtBranchName"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:layout_marginLeft="5dp"
                            android:text="Head Office"
                            android:layout_marginRight="20dp"
                            android:textSize="15dp"
                            android:textColor="#707070"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtGroupBy"
                            android:maxLines="1"
                            android:textAlignment="textStart"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textSize="15dp"
                            android:textColor="#707070"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnHaveData"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="match_parent "
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/lnSaleReport"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:id="@+id/lnHeader"
                            android:visibility="visible"
                            android:orientation="vertical"
                            android:background="@android:color/white"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rcvHeaderReport"
                                android:layout_gravity="center_horizontal"
                                android:isScrollContainer="false"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/whitesmoke"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/lnChartSale"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:padding="10dp"
                                    android:gravity="bottom"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/txtTitleChart"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="5dp"
                                        android:textColor="@color/textorange"
                                        android:text="@string/dashboard_activity_salebyperiod"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <Microcharts.Droid.ChartView
                                        android:layout_margin="5dp"
                                        android:id="@+id/chartView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="350dp"/>
                                    </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/lnTotal"
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:background="@android:color/white"
                                android:layout_margin="10dp"
                                app:cardElevation="1dp"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="false">
                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/textTotalName"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="viewStart"
                                        android:textSize="16dp"
                                        android:maxLines="1"
                                        android:textColor="@color/textorange"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:id="@+id/textGrandTotal"
                                        android:textAlignment="viewEnd"
                                        android:textSize="30dp"
                                        android:maxLines="1"
                                        android:textColor="@color/primaryDark"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:id="@+id/lnReportLeft"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:id="@+id/lnSearchLeft"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_marginLeft="10dp"
                                android:id="@+id/btnSearch3"
                                android:background="@mipmap/search"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/textSearch3"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/primaryDark"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center | right"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/imgFilter3"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:background="@mipmap/reportfilter"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                            <ImageButton
                                android:layout_marginLeft="30dp"
                                android:id="@+id/imgShare3"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:background="@mipmap/reportshare"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>

                    </FrameLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/lnHeaderLeft"
                            android:gravity="center_vertical"
                            android:background="@android:color/white"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtTypeTime"
                                android:layout_weight="1"
                                android:layout_marginLeft="150dp"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:textAlignment="textStart"
                                android:gravity="center"
                                android:text="@string/showreport_activity_hour"
                                android:background="@android:color/transparent"
                                android:textColor="#707070"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:layout_marginRight="230dp"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="@string/showreport_activity_sales"
                                android:background="@android:color/transparent"
                                android:id="@id/txtAmount"
                                android:textColor="#707070"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:background="@color/whitesmoke"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <FrameLayout
                                android:id="@+id/lnChartLeft"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <Microcharts.Droid.ChartView
                                    android:id="@+id/chartViewLeft"
                                    android:minHeight="380dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </FrameLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_weight="1"
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/rcvListCategoryLeft"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnNoData"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:background="@mipmap/defaultreport"
                        android:scaleType="fitXY"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/dashboard_activity_nodata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="0.5dip"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.6"
                android:id="@+id/lnRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lnDailyReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@android:color/white"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="75dp">
                        <FrameLayout
                            android:orientation="horizontal"
                            android:background="@android:color/white"
                            android:id="@+id/lnSearch1"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:layout_width="60dp"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:id="@+id/btnSearch1"
                                    android:background="@mipmap/search"
                                    android:scaleType="fitXY"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/textSearch1"
                                android:inputType="textAutoCorrect"
                                android:maxLines="1"
                                android:maxLength="50"
                                android:textColor="@color/primaryDark"
                                android:layout_marginRight="60dp"
                                android:layout_marginLeft="60dp"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center | right"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:id="@+id/imgFilter1"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:background="@mipmap/reportfilter"
                                    android:scaleType="fitXY"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"/>
                                <ImageButton
                                    android:layout_marginLeft="30dp"
                                    android:id="@+id/imgShare1"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:background="@mipmap/reportshare"
                                    android:scaleType="fitXY"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"/>
                            </LinearLayout>
                        </FrameLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:background="@android:color/white"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtTypeTimeRight"
                                android:layout_weight="1"
                                android:layout_marginLeft="25dp"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:textAlignment="textStart"
                                android:gravity="center"
                                android:text="@string/showreport_activity_hour"
                                android:background="@android:color/transparent"
                                android:textColor="#707070"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:layout_marginRight="25dp"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="@string/showreport_activity_sales"
                                android:background="@android:color/transparent"
                                android:id="@+id/txtAmountRight"
                                android:textColor="#707070"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:background="@android:color/white"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/rcvListTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnCategoryReport"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:id="@+id/lnSearch2"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btnSearch2"
                                android:background="@mipmap/search"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/textSearch2"
                            android:inputType="textAutoCorrect"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:textColor="@color/primaryDark"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center | right"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/imgFilter2"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:background="@mipmap/reportfilter"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                            <ImageButton
                                android:layout_marginLeft="30dp"
                                android:id="@+id/imgShare2"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:background="@mipmap/reportshare"
                                android:scaleType="fitXY"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </LinearLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:id="@+id/lnChartCategory"
                        android:padding="10dp"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Microcharts.Droid.ChartView
                            android:layout_margin="5dp"
                            android:id="@+id/chartView2"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/rcvListCategory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
