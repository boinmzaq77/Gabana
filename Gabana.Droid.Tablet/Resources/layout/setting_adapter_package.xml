<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    app:cardCornerRadius="5dp"
    android:background="@drawable/borderdecimal"
    android:outlineAmbientShadowColor="@android:color/darker_gray"
    android:outlineSpotShadowColor="@android:color/darker_gray"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewGrid">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <TextView
                    android:id="@+id/textPackName"
                    android:maxLines="1"
                    android:text="Package 1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="textStart"
                    android:textColor="@color/eclipse"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:id="@+id/textPackDetail1"
                        android:maxLines="1"
                        android:text=" 1 สาขา"
                        android:layout_marginLeft="43dp"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="textStart"
                        android:textColor="@color/eclipse"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/texthintcolor"
                        android:layout_width="9dp"
                        android:layout_height="9dp"/>
                    <TextView
                        android:id="@+id/textPackDetail2"
                        android:maxLines="1"
                        android:text=" 1 สาขา"
                        android:layout_marginLeft="43dp"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="textStart"
                        android:textColor="@color/eclipse"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:id="@+id/lnPrice"
                android:background="@color/btngraycolor"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:maxLines="1"
                        android:id="@+id/txtPrice"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/primaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="12dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginLeft="13dp"
                        android:text="@string/package_activity_month"
                        android:textColor="@color/eclipse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnSelectPackage"
                        android:layout_margin="10dp"
                        android:maxLines="1"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"
                        android:background="@drawable/btnblue"
                        android:text="@string/package_activity_select"
                        android:textAllCaps="false"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagePoppular"
                android:scaleType="fitXY"
                android:background="@mipmap/PackagePopular"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>