<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btnBack"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:id="@+id/textTitle"
            android:text="@string/addgiftvoucher"
            android:textSize="16dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:background="@android:color/transparent"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:text="@string/giftvoucher_activity_code"
                android:background="@android:color/transparent"
                android:textColor="@color/eclipse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texthintcolor"
                android:hint="@string/giftvoucher_activity_code"
                android:textColor="@color/primaryDark"
                android:id="@+id/txtGiftCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:text="@string/giftvoucher_activity_name"
                android:background="@android:color/transparent"
                android:id="@+id/txtNameCategory"
                android:textColor="@color/eclipse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texthintcolor"
                android:hint="@string/giftvoucher_activity_name"
                android:textColor="@color/primaryDark"
                android:id="@+id/txtGiftName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="15dp"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:text="@string/giftvoucher_activity_amount"
                        android:background="@android:color/transparent"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:hint="0.00"
                        android:textColorHint="@color/texthintcolor"
                        android:textColor="@color/primaryDark"
                        android:id="@+id/textAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@mipmap/Next"
                        android:scaleType="fitXY"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnAddAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <FrameLayout
            android:id="@+id/lnShowDelete"
            android:background="@drawable/btngray"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <FrameLayout
                android:id="@+id/lnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <Button
            android:id="@+id/btnAdd"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:textColor="@color/primaryDark"
            android:text="@string/addgiftvoucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>
