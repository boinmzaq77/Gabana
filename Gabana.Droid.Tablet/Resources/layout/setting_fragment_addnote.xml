<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:background="@color/whitesmoke"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:id="@+id/textTitle"
            android:textColor="@color/eclipse"
            android:gravity="center"
            android:text="@string/addnote_activity_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16dp"
                    android:text="@string/addnote_activity_notecategory"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtNameCategory"
                    android:textColor="@color/eclipse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    style="@style/Divider"
                    android:minHeight="20dp"
                    android:id="@+id/spnNoteCategory"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:scaleType="fitXY"
                    android:background="@mipmap/Next"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/framNoteCate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:minHeight="20dp"
                android:gravity="center_vertical"
                android:text="@string/addnote_activity_note"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:inputType="textAutoCorrect"
                android:textSize="16dp"
                android:minHeight="20dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/texthintcolor"
                android:hint="@string/addnote_activity_note"
                android:textColor="@color/primaryDark"
                android:id="@+id/textNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        
    </LinearLayout>
    <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <FrameLayout
            android:background="@drawable/btngray"
            android:id="@+id/btnDelete"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/trash"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </FrameLayout>
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:id="@+id/btnAdd"
            android:textColor="@color/primaryDark"
            android:text="@string/item_activity_addnote"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
