<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/eclipse"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/cashdrawer_activity_CashDrawer"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnOpenCashdawer"
                android:text="@string/cashdrawer_activity_opencashdrawer"
                android:textColor="@color/eclipse"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight ="0.8">
        <FrameLayout
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cashdrawer_activity_setting"
                    android:textColor="@color/eclipse"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <Switch
                    android:visibility="visible"
                    android:id="@+id/switchCashdrawer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="1"
                    android:scaleY="1"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnSettingCashDrawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btnSave"
            android:textAllCaps="false"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:textColor="@color/primaryDark"
            android:textSize="16dp"
            android:text="@string/textsave"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
