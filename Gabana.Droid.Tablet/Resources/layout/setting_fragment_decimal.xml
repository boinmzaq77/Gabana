<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:background="@color/whitesmoke"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/eclipse"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/decimal"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_vertical"
                    android:text="@string/decimal_activity_text1"
                    android:textSize="16dp"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:minHeight="20dp"
                    style="@style/Divider"
                    android:id= "@+id/spinnerDecimalCal"
                    android:background="@android:color/transparent"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:background="@mipmap/Next"
                    android:scaleType="fitXY"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnSpinDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <FrameLayout
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_vertical"
                    android:text="@string/decimal_activity_text2"
                    android:textSize="16dp"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textDecimalType"
                    android:gravity="center_vertical"
                    android:text="รูปแบบที่1"
                    android:visibility="gone"
                    android:textSize="16dp"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:minHeight="20dp"
                    style="@style/Divider"
                    android:id= "@+id/spinnerDecimalType"
                    android:background="@android:color/transparent"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:background="@mipmap/Next"
                    android:scaleType="fitXY"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnSpinDecimalType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <FrameLayout
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_vertical"
                    android:text="@string/decimal_activity_text3"
                    android:textSize="16dp"
                    android:textColor="@color/eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textOPTIONROUNDING"
                    android:minHeight="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="@color/nobel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:background="@mipmap/Next"
                    android:scaleType="fitXY"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lnSpinDecimalDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:textColor="@color/primaryDark"
            android:text="@string/textsave"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnSave" />
    </LinearLayout>
</LinearLayout>
