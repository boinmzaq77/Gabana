<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:text="@string/giftvoucher"
            android:textColor="@color/eclipse"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_weight="0.8"
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/lnGiftvoucher"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@android:color/white"
                    android:id="@+id/rcvGiftvoucher"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lnNoGiftvoucher"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="60dp"
                        android:background="@mipmap/DefaultGiftVoucher"
                        android:scaleType="fitXY"
                        android:layout_width="300dp"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/giftvoucher_activity_nogiftvoucher1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:text="@string/giftvoucher_activity_nogiftvoucher2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>


            <ImageButton
                android:textColor="@android:color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/lnGiftvoucher"
                android:layout_alignEnd="@id/lnGiftvoucher"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@mipmap/add"
                android:id="@+id/addGiftvoucher" />
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>