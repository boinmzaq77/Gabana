<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/eclipse"
            android:gravity="center"
            android:text="@string/merchant"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <LinearLayout
                    android:background="@android:color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="75dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:contentDescription="@string/merchantsetting"
                            android:id="@+id/imgProfile"
                            android:src="@mipmap/logodefault"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="180dp"
                    android:layout_height="180dp">
                    <FrameLayout
                        android:layout_gravity="bottom"
                        android:layout_width="150dp"
                        android:layout_height="45dp">
                        <ImageButton
                            android:id="@+id/btnAddImage"
                            android:layout_gravity="right"
                            android:background="@mipmap/addimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                    </FrameLayout>
                </FrameLayout>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/linegraycolor"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/updateprofile_merchantname"
                    android:textColor="@color/eclipse"
                    android:textSize="16dp"/>
                <EditText
                    android:minHeight="20dp"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:inputType="textAutoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryDark"
                    android:hint="@string/updateprofile_merchantname"
                    android:textColorHint="@color/texthintcolor"
                    android:background="@android:color/transparent"
                    android:textSize="16dp"
                    android:id="@+id/txtMerchantName"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/linegraycolor"/>
            <FrameLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#F75600"
                    android:textSize="16dp"
                    android:text="@string/additem_activity_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:contentDescription="@string/package_activity_showdetail"
                        android:layout_gravity="center"
                        android:id="@+id/btnShowDetail"
                        android:background="@mipmap/detailnotshow"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/lnShowDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/lnDetails"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:textSize="16dp"
                        android:text="@string/marchant_activity_tax"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/txtTax"
                        android:maxLines="1"
                        android:minHeight="20dp"
                        android:maxLength="13"
                        android:textSize="16dp"
                        android:inputType="number"
                        android:hint="@string/marchant_activity_tax"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:textColor="@color/primaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:textSize="16dp"
                        android:text="@string/marchant_activity_registrationno"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/txtRegistrationNo"
                        android:textSize="16dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="13"
                        android:minHeight="20dp"
                        android:hint="@string/marchant_activity_registrationno"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:textColor="@color/primaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:textSize="16dp"
                        android:text="@string/marchant_activity_phonenumber"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/txtPhoneNumber"
                        android:textSize="16dp"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:minHeight="20dp"
                        android:hint="@string/marchant_activity_phonehint"
                        android:textColorHint="@color/texthintcolor"
                        android:background="@android:color/transparent"
                        android:textColor="@color/primaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:layout_weight="1"
                        android:text="@string/addcustomer_activity_address"
                        android:textColor="#404040"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"/>
                    <EditText
                        android:id="@+id/txtaddress"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:minHeight="20dp"
                        android:maxLength="50"
                        android:inputType="text"
                        android:hint="@string/addcustomer_activity_address"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="16dp"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <LinearLayout
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:text="@string/addcustomer_activity_province"
                            android:textColor="@color/eclipse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16dp"/>
                        <Spinner
                            style="@style/Divider"
                            android:id="@+id/spinnerProvince"
                            android:background="@android:color/transparent"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnprovinces"
                            android:background="@mipmap/next"
                            android:scaleType="fitXY"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <LinearLayout
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:text="@string/addcustomer_activity_district"
                            android:textColor="@color/eclipse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16dp"/>
                        <Spinner
                            style="@style/Divider"
                            android:id="@+id/spinneramphures"
                            android:background="@android:color/transparent"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnAmphures"
                            android:background="@mipmap/next"
                            android:scaleType="fitXY"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <LinearLayout
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:text="@string/addcustomer_activity_subdistrict"
                            android:textColor="@color/eclipse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16dp"/>
                        <Spinner
                            style="@style/Divider"
                            android:id="@+id/spinnerdistrict"
                            android:background="@android:color/transparent"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnDistrict"
                            android:background="@mipmap/next"
                            android:scaleType="fitXY"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:text="@string/addcustomer_activity_postalcode"
                            android:textColor="@color/eclipse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16dp"/>
                        <TextView
                            android:id="@+id/txtzipcode"
                            android:layout_weight="1"
                            android:text="@string/addcustomer_activity_selectzipcode"
                            android:textColor="@color/nobel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:layout_weight="1"
                        android:text="@string/addcustomer_activity_comment"
                        android:textColor="#404040"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"/>
                    <EditText
                        android:layout_weight="1"
                        android:minHeight="20dp"
                        android:inputType="text"
                        android:hint="@string/addcustomer_activity_comment"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="16dp"
                        android:id="@+id/txtcomment"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/linegraycolor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:text="@string/addcustomer_activity_linkpromaxx"
                            android:textColor="#404040"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"/>
                        <EditText
                            android:enabled="false"
                            android:inputType="text"
                            android:hint="@string/addcustomer_activity_linkpromaxx"
                            android:textColor="@color/primaryDark"
                            android:textColorHint="@color/texthintcolor"
                            android:textSize="16dp"
                            android:id="@+id/txtlinkpromaxx"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <FrameLayout
                        android:background="@android:drawable/screen_background_light_transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/primaryDark"
            android:text="@string/textsave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:id="@+id/btnSave" />
    </LinearLayout>
</LinearLayout>