<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/linearLayoutHeader">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"
            android:text="@string/settingmyqr"
            android:textColor="@color/eclipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/framMyQR"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lnMyqr"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.viewpager.widget.ViewPager
                    android:layout_marginBottom="60dp"
                    android:visibility="visible"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewPagerImgQRCode" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/whitesmoke"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/lnindicator"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal">
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lnNomyQR"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="60dp"
                    android:background="@mipmap/defaultmyqr"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="@string/myqr_activity_nomyqr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
        <ImageButton
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@id/framMyQR"
            android:layout_alignEnd="@id/framMyQR"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:background="@mipmap/add"
            android:id="@+id/addQR" />
    </RelativeLayout>
</LinearLayout>
