<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/backb"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textTitle"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/eclipse"
            android:gravity="center"
            android:text="@string/package_activity_setting"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/textorange"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:text="@string/settingpackage_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_margin="10dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="false">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtPackageName"
                            android:gravity="center_vertical"
                            android:text="1 Branch/ 5Users"
                            android:textSize="16dp"
                            android:textColor="@color/eclipse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <FrameLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:id="@+id/textDetailBranch"
                                android:text="@string/branch"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:id="@+id/textDetailUser"
                                android:text="@string/branch"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:text="@string/settingpackage_activity_text1"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:text="@string/settingpackage_activity_text2"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:text="@string/settingpackage_activity_text3"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:text="@string/settingpackage_activity_text4"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:text="@string/settingpackage_activity_text5"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:text="@string/settingpackage_activity_text6"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/texthintcolor"
                                android:layout_width="9dp"
                                android:layout_height="9dp"/>
                            <TextView
                                android:text="@string/settingpackage_activity_text7"
                                android:layout_marginLeft="45dp"
                                android:textColor="@color/eclipse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </FrameLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:background="@android:color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/textPrice"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="left"
                                    android:gravity="center"
                                    android:text="฿ 759.00"
                                    android:textSize="20dp"
                                    android:textColor="@color/primaryDark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/textFree"
                                    android:layout_gravity="left"
                                    android:gravity="center"
                                    android:text="Free"
                                    android:textSize="20dp"
                                    android:textColor="@color/primaryDark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="left"
                                    android:gravity="center"
                                    android:text="@string/package_activity_expirydate"
                                    android:textSize="13dp"
                                    android:textColor="@color/secondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/textExpireDate"
                                    android:layout_gravity="left"
                                    android:gravity="center"
                                    android:textSize="13dp"
                                    android:textColor="@color/secondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>


                        <Button
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textAllCaps="false"
                            android:id="@+id/btnChangeePackage"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:textSize="16dp"
                            android:maxLines="1"
                            android:textColor="@color/primaryDark"
                            android:text="@string/settingpackage_activity_changepackage"
                            android:background="@drawable/btnwhiteborderbluerd5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:textColor="@color/textorange"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:text="@string/package_activity_paymenttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:layout_margin="10dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="false">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtPayby"
                        android:textAlignment="viewStart"
                        android:gravity="center_vertical"
                        android:text="Google Play"
                        android:textSize="16dp"
                        android:textColor="@color/eclipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16dp"
                            android:layout_gravity="left"
                            android:text="ต่ออายุครั้งต่อไป"
                            android:textColor="@color/nobel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtDueDate"
                            android:layout_gravity="right"
                            android:textSize="16dp"
                            android:text="01/04/2565"
                            android:textColor="@color/primaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="12dp"
                android:textColor="@color/secondaryText"
                android:text="@string/settingpackage_activity_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/primaryDark"
            android:text="@string/settingpackage_activity_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btnwhiteborderbluerd5"
            android:id="@+id/btnContact" />
    </LinearLayout>
</LinearLayout>
