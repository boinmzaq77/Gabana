<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:ignore="MissingDimension"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textTitle"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/eclipse"
            android:layout_gravity="center_vertical"
            android:text="@string/printer_activity_tite"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/settingprinter"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imgbtnTestPrint"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:text="@string/printer_activity_typeconnect"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"/>
            <Spinner
                style="@style/Divider"
                android:id="@+id/spinTypeConnect"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnTypeConnect"
                android:background="@mipmap/next"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/lnTypeConnect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:text="@string/printer_activity_typepaper"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"/>
            <Spinner
                style="@style/Divider"
                android:id="@+id/spinTypePaper"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnTypePaper"
                android:background="@mipmap/next"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/lntypePaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
        <FrameLayout
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:text="@string/printer_activity_typeprint"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"/>
            <Spinner
                style="@style/Divider"
                android:id="@+id/spinTypePrint"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnTypePrint"
                android:background="@mipmap/next"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/lntypePrint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
     <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:text="@string/printer_activity_commandtype"
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"/>
            <Spinner
                style="@style/Divider"
                android:id="@+id/spinTypeCommand"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnTypeCommand"
                android:background="@mipmap/next"
                android:scaleType="fitXY"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/lntypeTypeCommand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <ScrollView
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnWifi"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/printer_activity_wifi"
                    android:textColor="@color/textorange"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:text="@string/printer_activity_ip"
                        android:textSize="16dp"
                        android:textColor="@color/eclipse"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/textIP"
                        android:inputType="text"
                        android:maxLines="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/printer_activity_ip"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDark"
                        android:minHeight="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:text="@string/printer_activity_port"
                        android:textSize="16dp"
                        android:textColor="@color/eclipse"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/textPort"
                        android:inputType="text"
                        android:maxLines="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/printer_activity_port"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDark"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:minHeight="20dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:text="@string/printer_activity_printmode"
                        android:textSize="16dp"
                        android:textColor="@color/eclipse"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/textPrintMode"
                        android:inputType="text"
                        android:maxLines="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/printer_activity_printmode"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDark"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:minHeight="15dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:text="@string/printer_activity_codepage"
                        android:textSize="16dp"
                        android:textColor="@color/eclipse"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/textCodePage"
                        android:inputType="text"
                        android:maxLines="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/printer_activity_codepage"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDark"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:minHeight="15dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnBluetooth"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/printer_activity_bluetooth"
                    android:textColor="@color/textorange"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvlistBluetooth"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/lnShowSave"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btnSave"
            android:textSize="16dp"
            android:text="@string/textsave"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:background="@drawable/btnbluerectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
