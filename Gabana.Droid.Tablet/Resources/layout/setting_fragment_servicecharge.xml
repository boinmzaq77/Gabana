<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageButton
                android:contentDescription="@string/login_fragment_main_btn_back"
                android:background="@mipmap/backb"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imagebtnBack" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="80dp"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:text="@string/servicecharge_activity_title"
            android:textColor="@color/eclipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnBack"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnClear"
                android:text="@string/textclear"
                android:textColor="@color/colorrule"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/linegraycolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/whitesmoke"
            android:orientation="vertical"
            android:gravity="center"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textAlignment="center"
                android:text="@string/servicecharge_activity_servicecharge"
                android:textColor="@color/nobel"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:textSize="60dp"
                android:autoSizeMaxTextSize="60dp"
                android:hint="0.00"
                android:textColorHint="@color/texthintcolor"
                android:textColor="@color/primary"
                android:inputType="numberDecimal"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtServiceCharge" />
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="45dp">

                <Button
                    android:minWidth="150dp"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:id="@+id/btnBefore"
                    android:textColor="@color/primaryDark"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="@string/servicecharge_activity_before"
                    android:textSize="16dp"
                    android:background="@drawable/btnwhiteborderbluerd5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <Button
                    android:minWidth="150dp"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:id="@+id/btnAfter"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/servicecharge_activity_after"
                    android:textSize="16dp"
                    android:background="@drawable/btnbluerectangle"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_weight="2"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber1"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="1"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber2"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="2"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber3"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="3"/>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber4"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="4"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber5"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="5"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber6"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="6"/>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnnumber7"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="7"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber8"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="8"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber9"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="9"/>
            </LinearLayout>
            <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnPercent"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="%"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnnumber0"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/eclipse"
                    android:text="0"/>
                <View
                    android:background="@color/whitesmoke"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btndeletenumber"
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:background="@mipmap/del"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <Button
                android:textAllCaps="false"
                android:textSize="16dp"
                android:layout_margin="10dp"
                android:textColor="@color/primaryDark"
                android:text="@string/textsave"
                android:background="@drawable/btnwhiteborderbluerd5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnSave" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>