<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDimension"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/term_confirm_title1"
                android:textAlignment="center"
                android:textSize="16dp"
                android:gravity="center"/>
            <TextView
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/term_confirm_title2"
                android:textAlignment="center"
                android:textSize="16dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/term_confirm_detail1"
                android:textAlignment="center"
                android:textSize="13dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:textColor="@color/eclipse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/term_confirm_detail2"
                android:textAlignment="center"
                android:textSize="13dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#E6E6E6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:textAllCaps="false"
            android:textColor="@color/primaryDark"
            android:id="@+id/btn_cancel"
            android:layout_weight="0.6"
            android:background="@android:color/transparent"
            android:text="@string/textcancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#E6E6E6"/>
        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_save"
            android:textColor="@color/eclipse"
            android:layout_weight="0.6"
            android:background="@android:color/transparent"
            android:text="@string/textok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>